<Page x:Class="Lemoo.Modules.TaskManager.UI.Views.Pages.TaskDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:charts="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="任务仪表板">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="任务仪表板" FontSize="28" FontWeight="SemiBold"/>
                <TextBlock Text="查看任务统计和趋势分析" FontSize="14" Foreground="{DynamicResource TextFillColorTertiaryBrush}" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 统计卡片 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 总任务数 -->
            <Border Grid.Column="0" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="20" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="&#xE8F4;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="{DynamicResource AccentFillColorDefaultBrush}"/>
                    <TextBlock Text="{Binding Statistics.TotalTasks, FallbackValue=0}" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock Text="总任务数" FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- 待办任务 -->
            <Border Grid.Column="1" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="20" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="&#xE921;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="#6C757D"/>
                    <TextBlock Text="{Binding Statistics.PendingTasks, FallbackValue=0}" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock Text="待办" FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- 进行中 -->
            <Border Grid.Column="2" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="20" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="&#xE8B9;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="#0078D4"/>
                    <TextBlock Text="{Binding Statistics.InProgressTasks, FallbackValue=0}" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock Text="进行中" FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- 已完成 -->
            <Border Grid.Column="3" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="20" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="&#xE915;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="#107C10"/>
                    <TextBlock Text="{Binding Statistics.CompletedTasks, FallbackValue=0}" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock Text="已完成" FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- 完成率 -->
            <Border Grid.Column="4" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="&#xE74C;" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="#FF8C00"/>
                    <TextBlock Text="{Binding Statistics.CompletionRate, StringFormat='{}{0:F1}%', FallbackValue=0}" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock Text="完成率" FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 图表区域 -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 按状态分布 -->
            <Border Grid.Column="0" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="20" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="按状态分布" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    <ItemsControl ItemsSource="{Binding Statistics.TasksByStatus}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Key}" FontSize="14"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Value}" FontWeight="Bold" FontSize="14"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- 按优先级分布 -->
            <Border Grid.Column="1" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="20" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="按优先级分布" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    <ItemsControl ItemsSource="{Binding Statistics.TasksByPriority}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Key}" FontSize="14"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Value}" FontWeight="Bold" FontSize="14"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- 最近7天完成趋势 -->
            <Border Grid.Column="2" Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="最近7天完成趋势" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    <ItemsControl ItemsSource="{Binding Statistics.DailyCompletedTasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Date, StringFormat='{}{0:MM/dd}'}" FontSize="12"/>
                                    <Border Grid.Column="2" Background="{DynamicResource LayerFillColorDefaultBrush}" Height="8" CornerRadius="4" VerticalAlignment="Center"/>
                                    <Border Grid.Column="2" Background="{DynamicResource AccentFillColorDefaultBrush}" Height="8" CornerRadius="4" VerticalAlignment="Center" HorizontalAlignment="Left">
                                        <Border.Width>
                                            <MultiBinding Converter="{StaticResource MaxValueConverter}">
                                                <Binding Path="Count"/>
                                                <Binding Path="DataContext.MaxDailyCount" RelativeSource="{RelativeSource AncestorType=Page}"/>
                                            </MultiBinding>
                                        </Border.Width>
                                    </Border>
                                    <TextBlock Grid.Column="3" Text="{Binding Count}" FontWeight="Bold" FontSize="12"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 加载遮罩 -->
        <Border Grid.Row="0" Grid.RowSpan="3"
                Background="#80000000"
                CornerRadius="8"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="加载中..." FontSize="16" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
