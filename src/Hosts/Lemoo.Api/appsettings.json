{
  "Lemoo": {
    "Mode": "Api",
    "Modules": {
      "Enabled": [ "*" ],
      "Path": "./Modules",
      "AutoLoad": true,
      "HotReload": false
    },
    "Database": {
      "Provider": "SqlServer",
      "ConnectionStrings": {
        "Example": "Server=localhost;Database=Lemoo_Example;Trusted_Connection=true;TrustServerCertificate=true;"
      },
      "EnableSensitiveDataLogging": false,
      "CommandTimeout": 30,
      "MaxRetryCount": 5
    },
    "Api": {
      "BaseUrl": "https://localhost:5001",
      "Timeout": 30,
      "RetryPolicy": {
        "MaxRetries": 3,
        "BackoffType": "Exponential"
      }
    },
    "Caching": {
      "Provider": "Memory",
      "DefaultExpiration": "00:05:00"
    },
    "Logging": {
      "Level": "Information",
      "Seq": {
        "ServerUrl": "http://localhost:5341"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "AllowedHosts": "*"
}
