<Page x:Class="Lemoo.UI.WPF.Views.Pages.Win11ComboBoxSamplePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="Transparent">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Text="Win11 下拉框示例"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource MenuForegroundBrush}"
                   Margin="0,0,0,16" />

        <!-- 示例区域 -->
        <Border Grid.Row="1"
                Background="{DynamicResource WorkbenchCardBrush}"
                CornerRadius="8"
                Padding="16"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True">
            <StackPanel>
                <TextBlock Text="基本用法"
                           Foreground="{DynamicResource InputForegroundBrush}"
                           Margin="0,0,0,8" />

                <!-- 使用 Win11 风格的 ComboBox -->
                <ComboBox Style="{StaticResource Win11.ComboBoxStyle}"
                          ItemContainerStyle="{StaticResource Win11.ComboBoxItemStyle}"
                          Width="220"
                          SelectedIndex="0">
                    <ComboBoxItem>选项一</ComboBoxItem>
                    <ComboBoxItem>选项二</ComboBoxItem>
                    <ComboBoxItem>选项三</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="说明：此控件使用 Win11 风格的圆角、边框和下拉阴影效果。"
                           Foreground="{DynamicResource InputForegroundBrush}"
                           Margin="0,12,0,0"
                           TextWrapping="Wrap" />
            </StackPanel>
        </Border>
    </Grid>
</Page>


