<Page x:Class="Lemoo.UI.WPF.Views.Pages.SettingsSamplePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:Lemoo.UI.WPF.Converters"
      xmlns:convertersFramework="clr-namespace:Lemoo.UI.Converters;assembly=Lemoo.UI"
      xmlns:helpers="clr-namespace:Lemoo.UI.Helpers"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="Transparent">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Lemoo.UI;component/Styles/Theme/ThemePreviewCard.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToBorderBrushConverter x:Key="BoolToBorderBrushConverter" />
            <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
            <convertersFramework:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:ThemeEqualsMultiConverter x:Key="ThemeEqualsMultiConverter" />
            <converters:ThemeBorderBrushConverter x:Key="ThemeBorderBrushConverter" />

            <!-- 主题预览窗口模板 -->
        <DataTemplate x:Key="ThemePreviewWindowTemplate" DataType="helpers:ThemeInfo">
            <Border Style="{StaticResource ThemePreviewWindowStyle}">
                <Grid>
                    <!-- 标题栏 -->
                    <Border Background="{Binding PreviewPrimaryColor, Converter={StaticResource ColorToBrushConverter}}"
                            Height="18"
                            VerticalAlignment="Top"
                            CornerRadius="6,6,0,0">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="4" ShadowDepth="0" Direction="270" />
                        </Border.Effect>
                    </Border>

                    <!-- 侧边栏 -->
                    <Border Background="{Binding PreviewPrimaryColor, Converter={StaticResource ColorToBrushConverter}}"
                            Width="28"
                            HorizontalAlignment="Left"
                            Margin="0,18,0,0">
                    </Border>

                    <!-- 主区域 -->
                    <Border Background="{Binding PreviewSecondaryColor, Converter={StaticResource ColorToBrushConverter}}"
                            Margin="28,18,0,0">
                        <!-- 强调色示例 -->
                        <Border Width="12"
                                Height="12"
                                Background="{Binding PreviewAccentColor, Converter={StaticResource ColorToBrushConverter}}"
                                CornerRadius="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect Color="{Binding PreviewAccentColor, Converter={StaticResource ColorToBrushConverter}}"
                                                  Opacity="0.4" BlurRadius="6" ShadowDepth="0" />
                            </Border.Effect>
                        </Border>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- 主题卡片模板 -->
        <DataTemplate x:Key="ThemeCardTemplate" DataType="helpers:ThemeInfo">
            <Border x:Name="CardBorder"
                    Background="{DynamicResource InputBackgroundBrush}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,12"
                    Cursor="Hand">
                <Border.InputBindings>
                    <MouseBinding Command="{Binding DataContext.SelectThemeCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                CommandParameter="{Binding}"
                                MouseAction="LeftClick" />
                </Border.InputBindings>
                <Border.BorderBrush>
                    <MultiBinding Mode="OneWay" Converter="{StaticResource ThemeBorderBrushConverter}">
                        <Binding Path="DataContext.SelectedTheme" RelativeSource="{RelativeSource AncestorType=Page}" />
                        <Binding />
                    </MultiBinding>
                </Border.BorderBrush>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- 单选按钮 -->
                    <RadioButton Grid.Column="0"
                                GroupName="ThemeGroup"
                                Margin="0,0,16,0"
                                VerticalAlignment="Center">
                        <RadioButton.IsChecked>
                            <MultiBinding Mode="OneWay" Converter="{StaticResource ThemeEqualsMultiConverter}">
                                <Binding Path="DataContext.SelectedTheme" RelativeSource="{RelativeSource AncestorType=Page}" />
                                <Binding />
                            </MultiBinding>
                        </RadioButton.IsChecked>
                        <RadioButton.CommandParameter>
                            <Binding />
                        </RadioButton.CommandParameter>
                        <RadioButton.Command>
                            <Binding Path="DataContext.SelectThemeCommand" RelativeSource="{RelativeSource AncestorType=Page}" />
                        </RadioButton.Command>
                    </RadioButton>

                    <!-- 主题信息 -->
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <TextBlock Text="{Binding DisplayName}"
                                     FontSize="15"
                                     FontWeight="SemiBold"
                                     Foreground="{DynamicResource InputForegroundBrush}"
                                     VerticalAlignment="Center" />

                            <!-- 主题标签 -->
                            <Border Style="{StaticResource ThemeTagBadgeStyle}"
                                    Visibility="{Binding Tag, Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="{Binding Tag}"
                                         Style="{StaticResource ThemeTagTextStyle}" />
                            </Border>
                        </StackPanel>

                        <TextBlock Text="{Binding Description}"
                                 FontSize="13"
                                 Foreground="{DynamicResource InputForegroundBrush}"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,2" />

                        <TextBlock Text="{Binding DetailDescription}"
                                 FontSize="12"
                                 Foreground="{DynamicResource InputForegroundBrush}"
                                 Opacity="0.5"
                                 TextWrapping="Wrap" />
                    </StackPanel>

                    <!-- 主题预览 -->
                    <ContentPresenter Grid.Column="2"
                                    Content="{Binding}"
                                    ContentTemplate="{StaticResource ThemePreviewWindowTemplate}" />
                </Grid>
            </Border>
        </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <!-- 使用 ScrollViewer 包裹整个内容区域，支持内容滚动 -->
    <ScrollViewer Margin="24"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <TextBlock Grid.Row="0"
                       Text="主题设置"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource InputForegroundBrush}"
                       Margin="0,0,0,24" />

            <!-- 主题选择卡片 -->
            <Border Grid.Row="1"
                    Background="{DynamicResource WorkbenchSurfaceBrush}"
                    BorderBrush="{DynamicResource InputBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                <StackPanel>
                    <TextBlock Text="选择主题模式"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource InputForegroundBrush}"
                               Margin="0,0,0,16" />

                    <TextBlock Text="更改应用程序的外观主题，包括颜色、背景和控件样式。"
                               FontSize="14"
                               Foreground="{DynamicResource InputForegroundBrush}"
                               Opacity="0.7"
                               TextWrapping="Wrap"
                               Margin="0,0,0,24" />

                    <!-- 主题列表 -->
                    <ItemsControl ItemsSource="{Binding Themes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentPresenter Content="{Binding}"
                                                ContentTemplate="{StaticResource ThemeCardTemplate}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
