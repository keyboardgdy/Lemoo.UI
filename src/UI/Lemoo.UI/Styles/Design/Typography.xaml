<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- ============================================
         字体排版定义
         共享资源，不依赖主题
         ============================================ -->
    
    <!-- 字体族 -->
    <FontFamily x:Key="FontFamily.Default">Segoe UI</FontFamily>
    <!-- 图标字体：添加 Segoe MDL2 Assets 作为回退，确保在 Windows 10 上也能正常显示 -->
    <FontFamily x:Key="FontFamily.Icon">Segoe Fluent Icons, Segoe MDL2 Assets</FontFamily>
    <FontFamily x:Key="FontFamily.Icon.Legacy">Segoe MDL2 Assets</FontFamily>
    <FontFamily x:Key="FontFamily.Mono">Consolas</FontFamily>
    
    <!-- 字体大小 -->
    <sys:Double x:Key="FontSize.ExtraSmall">10</sys:Double>
    <sys:Double x:Key="FontSize.Small">12</sys:Double>
    <sys:Double x:Key="FontSize.Normal">14</sys:Double>
    <sys:Double x:Key="FontSize.Medium">16</sys:Double>
    <sys:Double x:Key="FontSize.Large">18</sys:Double>
    <sys:Double x:Key="FontSize.ExtraLarge">20</sys:Double>
    <sys:Double x:Key="FontSize.Huge">24</sys:Double>
    
    <!-- 字体粗细 -->
    <FontWeight x:Key="FontWeight.Normal">Normal</FontWeight>
    <FontWeight x:Key="FontWeight.SemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeight.Bold">Bold</FontWeight>
    
    <!-- 行高 -->
    <sys:Double x:Key="LineHeight.Tight">1.2</sys:Double>
    <sys:Double x:Key="LineHeight.Normal">1.5</sys:Double>
    <sys:Double x:Key="LineHeight.Relaxed">1.8</sys:Double>
    
</ResourceDictionary>


