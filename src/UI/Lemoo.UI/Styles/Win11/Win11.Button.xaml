<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 为了在设计期/运行期都能解析 Win11.CornerRadius.* 等 Token 和动画资源，这里显式合并相关字典 -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Lemoo.UI;component/Styles/Design/Animations.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Lemoo.UI;component/Styles/Win11/Win11.Tokens.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- ============================================
         共用动画 Storyboard 资源
         ============================================ -->

    <!-- 按钮悬停进入动画 -->
    <Storyboard x:Key="ButtonHoverEnterStoryboard">
        <ColorAnimation Storyboard.TargetName="border"
                       Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                       To="{StaticResource button.hoverBackground}"
                       Duration="{StaticResource AnimationDuration.Normal}"
                       EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
        <ColorAnimation Storyboard.TargetName="border"
                       Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                       To="{StaticResource input.focusBorder}"
                       Duration="{StaticResource AnimationDuration.Normal}"
                       EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
    </Storyboard>

    <!-- 按钮悬停退出动画 -->
    <Storyboard x:Key="ButtonHoverExitStoryboard">
        <ColorAnimation Storyboard.TargetName="border"
                       Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                       To="{StaticResource button.background}"
                       Duration="{StaticResource AnimationDuration.Normal}"
                       EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
        <ColorAnimation Storyboard.TargetName="border"
                       Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                       To="{StaticResource button.border}"
                       Duration="{StaticResource AnimationDuration.Normal}"
                       EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
    </Storyboard>

    <!-- 按钮按下动画 -->
    <Storyboard x:Key="ButtonPressedStoryboard">
        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                        Storyboard.TargetProperty="ScaleX"
                        To="0.97"
                        Duration="{StaticResource AnimationDuration.Fast}"
                        EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                        Storyboard.TargetProperty="ScaleY"
                        To="0.97"
                        Duration="{StaticResource AnimationDuration.Fast}"
                        EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
    </Storyboard>

    <!-- 按钮释放动画 -->
    <Storyboard x:Key="ButtonReleasedStoryboard">
        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                        Storyboard.TargetProperty="ScaleX"
                        To="1"
                        Duration="{StaticResource AnimationDuration.Normal}"
                        EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                        Storyboard.TargetProperty="ScaleY"
                        To="1"
                        Duration="{StaticResource AnimationDuration.Normal}"
                        EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
    </Storyboard>

    <!-- 主按钮悬停进入动画 -->
    <Storyboard x:Key="PrimaryButtonHoverEnterStoryboard">
        <ColorAnimation Storyboard.TargetName="border"
                       Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                       To="{StaticResource Palette.Accent.Hover}"
                       Duration="{StaticResource AnimationDuration.Normal}"
                       EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
    </Storyboard>

    <!-- 主按钮悬停退出动画 -->
    <Storyboard x:Key="PrimaryButtonHoverExitStoryboard">
        <ColorAnimation Storyboard.TargetName="border"
                       Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                       To="{StaticResource Palette.Accent.Primary}"
                       Duration="{StaticResource AnimationDuration.Normal}"
                       EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
    </Storyboard>

    <!-- 主按钮按下动画 -->
    <Storyboard x:Key="PrimaryButtonPressedStoryboard">
        <ColorAnimation Storyboard.TargetName="border"
                       Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                       To="{StaticResource Palette.Accent.Pressed}"
                       Duration="{StaticResource AnimationDuration.Fast}"
                       EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                        Storyboard.TargetProperty="ScaleX"
                        To="0.97"
                        Duration="{StaticResource AnimationDuration.Fast}"
                        EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                        Storyboard.TargetProperty="ScaleY"
                        To="0.97"
                        Duration="{StaticResource AnimationDuration.Fast}"
                        EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
    </Storyboard>

    <!-- 主按钮释放动画 -->
    <Storyboard x:Key="PrimaryButtonReleasedStoryboard">
        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                        Storyboard.TargetProperty="ScaleX"
                        To="1"
                        Duration="{StaticResource AnimationDuration.Normal}"
                        EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                        Storyboard.TargetProperty="ScaleY"
                        To="1"
                        Duration="{StaticResource AnimationDuration.Normal}"
                        EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
    </Storyboard>

    <!-- 危险按钮悬停进入动画 -->
    <Storyboard x:Key="DangerButtonHoverEnterStoryboard">
        <DoubleAnimation Storyboard.TargetName="border"
                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Opacity)"
                        To="0.8"
                        Duration="{StaticResource AnimationDuration.Normal}"
                        EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
    </Storyboard>

    <!-- 危险按钮悬停退出动画 -->
    <Storyboard x:Key="DangerButtonHoverExitStoryboard">
        <DoubleAnimation Storyboard.TargetName="border"
                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Opacity)"
                        To="1"
                        Duration="{StaticResource AnimationDuration.Normal}"
                        EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
    </Storyboard>

    <!-- 危险按钮按下动画 -->
    <Storyboard x:Key="DangerButtonPressedStoryboard">
        <DoubleAnimation Storyboard.TargetName="border"
                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Opacity)"
                        To="0.6"
                        Duration="{StaticResource AnimationDuration.Fast}"
                        EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                        Storyboard.TargetProperty="ScaleX"
                        To="0.97"
                        Duration="{StaticResource AnimationDuration.Fast}"
                        EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
        <DoubleAnimation Storyboard.TargetName="scaleTransform"
                        Storyboard.TargetProperty="ScaleY"
                        To="0.97"
                        Duration="{StaticResource AnimationDuration.Fast}"
                        EasingFunction="{StaticResource EasingFunction.EaseOut}"/>
    </Storyboard>

    <!-- ============================================
         按钮样式 (Button) - 基础样式
         ============================================ -->
    <Style x:Key="Win11.ButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource Win11.BorderThickness.Thin}"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Normal}"/>
        <Setter Property="FontFamily" Value="{StaticResource FontFamily.Default}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource Win11.CornerRadius.Small}"
                            SnapsToDevicePixels="True">
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="scaleTransform" ScaleX="1" ScaleY="1" CenterX="0.5" CenterY="0.5"/>
                        </Border.RenderTransform>
                        <Grid>
                            <ContentPresenter x:Name="contentPresenter"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                            <Border x:Name="focusIndicator"
                                    BorderThickness="{StaticResource Win11.BorderThickness.Medium}"
                                    BorderBrush="{DynamicResource InputFocusBorderBrush}"
                                    CornerRadius="{StaticResource Win11.CornerRadius.Small}"
                                    Margin="-2"
                                    Visibility="Collapsed"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource ButtonHoverEnterStoryboard}"/>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource ButtonHoverExitStoryboard}"/>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource ButtonPressedStoryboard}"/>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource ButtonReleasedStoryboard}"/>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="focusIndicator" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="{DynamicResource ButtonDisabledBackgroundBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ButtonDisabledForegroundBrush}"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                            <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

