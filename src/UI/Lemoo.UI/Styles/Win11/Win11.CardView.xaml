<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:Lemoo.UI.Controls">

    <!-- CardView 默认样式 -->
    <Style TargetType="{x:Type ui:CardView}" x:Key="{x:Type ui:CardView}">
        <Setter Property="Background" Value="{DynamicResource Brush.Card.Background}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Card.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}" />
        <Setter Property="Elevation" Value="Flat" />
        <Setter Property="EnableHoverAnimation" Value="False" />
        <Setter Property="EnablePressAnimation" Value="False" />
        <Setter Property="IsClickable" Value="False" />
        <Setter Property="Cursor" Value="Arrow" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ui:CardView}">
                    <Border
                        x:Name="CardBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}"
                        Effect="{Binding Effect, RelativeSource={RelativeSource TemplatedParent}}"
                        Cursor="{TemplateBinding Cursor}"
                        RenderTransformOrigin="0.5,0.5">

                        <Border.RenderTransform>
                            <ScaleTransform x:Name="CardScale" ScaleX="1" ScaleY="1" />
                        </Border.RenderTransform>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- 头部 -->
                            <ContentPresenter
                                Grid.Row="0"
                                Content="{TemplateBinding Header}"
                                ContentTemplate="{TemplateBinding HeaderTemplate}"
                                x:Name="PART_Header"
                                Visibility="Collapsed"
                                Margin="0,0,0,12" />

                            <!-- 内容 -->
                            <ContentPresenter
                                Grid.Row="1"
                                Content="{TemplateBinding Content}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}" />

                            <!-- 尾部 -->
                            <ContentPresenter
                                Grid.Row="2"
                                Content="{TemplateBinding Footer}"
                                ContentTemplate="{TemplateBinding FooterTemplate}"
                                x:Name="PART_Footer"
                                Visibility="Collapsed"
                                Margin="0,12,0,0" />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- 显示头部 -->
                        <Trigger Property="Header" Value="{x:Null}">
                            <Setter TargetName="PART_Header" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <DataTrigger Binding="{Binding Header, RelativeSource={RelativeSource Self}}" Value="{x:Null}">
                            <Setter TargetName="PART_Header" Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Header, RelativeSource={RelativeSource Self}}" Value="{x:Null}">
                            <Setter TargetName="PART_Header" Property="Visibility" Value="Visible" />
                        </DataTrigger>

                        <!-- 显示尾部 -->
                        <Trigger Property="Footer" Value="{x:Null}">
                            <Setter TargetName="PART_Footer" Property="Visibility" Value="Collapsed" />
                        </Trigger>

                        <!-- 可点击状态 -->
                        <Trigger Property="IsClickable" Value="True">
                            <Setter Property="Cursor" Value="Hand" />
                        </Trigger>

                        <!-- 悬停动画 -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="EnableHoverAnimation" Value="True" />
                                <Condition Property="IsMouseOver" Value="True" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="CardScale"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="1.02"
                                            Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation
                                            Storyboard.TargetName="CardScale"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="1.02"
                                            Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="CardScale"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="1"
                                            Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation
                                            Storyboard.TargetName="CardScale"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="1"
                                            Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>

                        <!-- 按压动画 -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="EnablePressAnimation" Value="True" />
                                <Condition Property="IsClickable" Value="True" />
                                <Condition Property="IsMouseOver" Value="True" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="CardScale"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="0.98"
                                            Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation
                                            Storyboard.TargetName="CardScale"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="0.98"
                                            Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="CardScale"
                                            Storyboard.TargetProperty="ScaleX"
                                            To="1"
                                            Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation
                                            Storyboard.TargetName="CardScale"
                                            Storyboard.TargetProperty="ScaleY"
                                            To="1"
                                            Duration="0:0:0.1">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- CardView.Outlined 变体样式 -->
    <Style TargetType="{x:Type ui:CardView}" x:Key="CardView.Outlined" BasedOn="{StaticResource {x:Type ui:CardView}}">
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Primary}" />
    </Style>

    <!-- CardView.Elevated 变体样式 -->
    <Style TargetType="{x:Type ui:CardView}" x:Key="CardView.Elevated" BasedOn="{StaticResource {x:Type ui:CardView}}">
        <Setter Property="Elevation" Value="Medium" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <!-- CardView.Clickable 变体样式 -->
    <Style TargetType="{x:Type ui:CardView}" x:Key="CardView.Clickable" BasedOn="{StaticResource {x:Type ui:CardView}}">
        <Setter Property="IsClickable" Value="True" />
        <Setter Property="EnableHoverAnimation" Value="True" />
        <Setter Property="EnablePressAnimation" Value="True" />
        <Setter Property="Elevation" Value="Low" />
    </Style>

</ResourceDictionary>
