<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="clr-namespace:Lemoo.UI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Lemoo.UI;component/Styles/Design/Animations.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Lemoo.UI;component/Styles/Design/Typography.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Lemoo.UI;component/Styles/Win11/Win11.Tokens.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Lemoo.UI;component/Converters/Converters.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- ChartControl 默认样式 -->
    <Style TargetType="{x:Type ui:ChartControl}">
        <Setter Property="Background" Value="{DynamicResource Brush.Card.Background}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Card.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="MinHeight" Value="200" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ui:ChartControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- 标题 -->
                            <TextBlock x:Name="TitleText"
                                       Grid.Row="0"
                                       Text="{TemplateBinding Title}"
                                       FontSize="{StaticResource Win11.FontSize.Subtitle}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource Brush.Text.Primary}"
                                       Margin="0,0,0,16"
                                       Visibility="{TemplateBinding ShowTitle, Converter={StaticResource BooleanToVisibilityConverter}}" />

                            <!-- 图表画布 -->
                            <Border Grid.Row="1"
                                    CornerRadius="4"
                                    Background="Transparent">
                                <Canvas x:Name="PART_Canvas"
                                        ClipToBounds="True" />
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
