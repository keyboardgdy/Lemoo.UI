<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ToolBar 样式 -->
    <Style x:Key="Win11.ToolBarStyle" TargetType="ToolBar">
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource InputForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="4,0"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Normal}"/>
        <Setter Property="FontFamily" Value="{StaticResource FontFamily.Default}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolBar">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                Height="{TemplateBinding Height}"
                                SnapsToDevicePixels="True">
                                <ToolBarPanel x:Name="ToolBarPanel"
                                              IsItemsHost="True"
                                              Margin="0,2"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ToolBarPanel 样式 -->
    <Style x:Key="Win11.ToolBarPanelStyle" TargetType="ToolBarPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

    <!-- ToolBar.Tray 样式 (用于工具栏溢出区域) -->
    <Style x:Key="Win11.ToolBarTrayStyle" TargetType="ToolBarTray">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="IsLocked" Value="True"/>
    </Style>

    <!-- ToolBar 按钮/项样式 -->
    <Style x:Key="Win11.ToolBarButtonStyle" TargetType="{x:Type ButtonBase}" BasedOn="{StaticResource Win11.ButtonStyle}">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="32"/>
    </Style>

    <!-- ToolBar CheckBox 样式 -->
    <Style x:Key="Win11.ToolBarCheckBoxStyle" TargetType="{x:Type CheckBox}" BasedOn="{StaticResource Win11.CheckBoxStyle}">
        <Setter Property="Margin" Value="4"/>
    </Style>

    <!-- ToolBar Separator 样式 -->
    <Style x:Key="Win11.ToolBarSeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{DynamicResource SeparatorBrush}"/>
        <Setter Property="Width" Value="1"/>
        <Setter Property="Margin" Value="4,8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Border Background="{TemplateBinding Background}"
                            Width="{TemplateBinding Width}"
                            Margin="{TemplateBinding Margin}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 默认样式 -->
    <Style TargetType="ToolBar" BasedOn="{StaticResource Win11.ToolBarStyle}"/>
    <Style TargetType="ToolBarPanel" BasedOn="{StaticResource Win11.ToolBarPanelStyle}"/>
    <Style TargetType="ToolBarTray" BasedOn="{StaticResource Win11.ToolBarTrayStyle}"/>

</ResourceDictionary>
