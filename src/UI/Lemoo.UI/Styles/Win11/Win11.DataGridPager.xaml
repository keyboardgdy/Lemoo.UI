<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Lemoo.UI.Controls.Data">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Lemoo.UI;component/Styles/Win11/Win11.Tokens.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- DataGridPager 样式 -->
    <Style x:Key="Win11.DataGridPagerStyle" TargetType="controls:DataGridPager">
        <Setter Property="Background" Value="{DynamicResource Brush.Card.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Card.Border}"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:DataGridPager">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="0,0,4,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 左侧：分页信息 -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBlock Text="共 "
                                           Foreground="{DynamicResource Brush.Text.Secondary}"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{TemplateBinding TotalItems}"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text=" 条记录"
                                           Foreground="{DynamicResource Brush.Text.Secondary}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- 中间：分页按钮 -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <!-- 第一页 -->
                                <Button x:Name="PART_ButtonFirst"
                                        Width="32"
                                        Height="32"
                                        Margin="2,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        ToolTip="第一页">
                                    <Grid Width="16" Height="16">
                                        <Path Data="M 6 4 L 6 12 L 14 8 Z M 14 4 L 14 12 L 22 8 Z"
                                              Fill="{DynamicResource Brush.Text.Primary}"
                                              Stretch="Uniform"/>
                                    </Grid>
                                </Button>

                                <!-- 上一页 -->
                                <Button x:Name="PART_ButtonPrevious"
                                        Width="32"
                                        Height="32"
                                        Margin="2,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        ToolTip="上一页">
                                    <Grid Width="16" Height="16">
                                        <Path Data="M 10 4 L 4 8 L 10 12 Z"
                                              Fill="{DynamicResource Brush.Text.Primary}"
                                              Stretch="Uniform"/>
                                    </Grid>
                                </Button>

                                <!-- 页码信息 -->
                                <Border Margin="8,0"
                                        Padding="12,4"
                                        Background="{DynamicResource Brush.Card.HoverBackground}"
                                        CornerRadius="4"
                                        VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{TemplateBinding CurrentPage}"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text=" / "
                                                   Foreground="{DynamicResource Brush.Text.Secondary}"/>
                                        <TextBlock Text="{TemplateBinding TotalPages}"
                                                   Foreground="{DynamicResource Brush.Text.Secondary}"/>
                                    </StackPanel>
                                </Border>

                                <!-- 下一页 -->
                                <Button x:Name="PART_ButtonNext"
                                        Width="32"
                                        Height="32"
                                        Margin="2,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        ToolTip="下一页">
                                    <Grid Width="16" Height="16">
                                        <Path Data="M 6 4 L 12 8 L 6 12 Z"
                                              Fill="{DynamicResource Brush.Text.Primary}"
                                              Stretch="Uniform"/>
                                    </Grid>
                                </Button>

                                <!-- 最后一页 -->
                                <Button x:Name="PART_ButtonLast"
                                        Width="32"
                                        Height="32"
                                        Margin="2,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        ToolTip="最后一页">
                                    <Grid Width="16" Height="16">
                                        <Path Data="M 6 4 L 14 8 L 6 12 Z M 14 4 L 22 8 L 14 12 Z"
                                              Fill="{DynamicResource Brush.Text.Primary}"
                                              Stretch="Uniform"
                                              RenderTransformOrigin="0.5,0.5">
                                            <Path.RenderTransform>
                                                <ScaleTransform ScaleX="-1"/>
                                            </Path.RenderTransform>
                                        </Path>
                                    </Grid>
                                </Button>
                            </StackPanel>

                            <!-- 右侧：每页显示数量 -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Visibility="Collapsed">
                                <TextBlock Text="每页 "
                                           Foreground="{DynamicResource Brush.Text.Secondary}"
                                           VerticalAlignment="Center"/>
                                <ComboBox MinWidth="80"
                                          Height="32"
                                          SelectedIndex="0"
                                          VerticalAlignment="Center">
                                    <ComboBoxItem Content="10"/>
                                    <ComboBoxItem Content="20"/>
                                    <ComboBoxItem Content="50"/>
                                    <ComboBoxItem Content="100"/>
                                    <ComboBoxItem Content="200"/>
                                </ComboBox>
                                <TextBlock Text=" 条"
                                           Foreground="{DynamicResource Brush.Text.Secondary}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 默认样式 -->
    <Style TargetType="controls:DataGridPager" BasedOn="{StaticResource Win11.DataGridPagerStyle}"/>

</ResourceDictionary>
