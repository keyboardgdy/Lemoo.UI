<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:Lemoo.UI.Controls">

    <!-- SearchBox 默认样式 -->
    <Style TargetType="{x:Type ui:SearchBox}" x:Key="{x:Type ui:SearchBox}">
        <Setter Property="Background" Value="{DynamicResource Brush.TextBox.Background}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.TextBox.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="Height" Value="36" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ui:SearchBox}">
                    <Border
                        x:Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{DynamicResource CornerRadius.Small}"
                        SnapsToDevicePixels="True">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- 搜索图标 -->
                            <Path
                                Grid.Column="0"
                                Data="M21,21 L15,15 M17,10 C17,13.866 13.866,17 10,17 C6.13401,17 3,13.866 3,10 C3,6.13401 6.13401,3 10,3 C13.866,3 17,6.13401 17,10"
                                Stroke="{DynamicResource Brush.Text.Secondary}"
                                StrokeThickness="2"
                                Width="16"
                                Height="16"
                                Stretch="Uniform"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="10,0,8,0" />

                            <!-- 文本框 -->
                            <TextBox
                                Grid.Column="1"
                                x:Name="TextBoxPart"
                                Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                Foreground="{TemplateBinding Foreground}"
                                FontFamily="{TemplateBinding FontFamily}"
                                FontSize="{TemplateBinding FontSize}"
                                CaretBrush="{DynamicResource Brush.TextBox.Caret}" />

                            <!-- 占位符文本 -->
                            <TextBlock
                                Grid.Column="1"
                                x:Name="PlaceholderText"
                                Text="{TemplateBinding PlaceholderText}"
                                Foreground="{DynamicResource Brush.Text.Secondary}"
                                VerticalAlignment="Center"
                                Margin="0,0,0,0"
                                IsHitTestVisible="False"
                                Visibility="Collapsed" />

                            <!-- 清除按钮 -->
                            <Button
                                Grid.Column="2"
                                x:Name="ClearButton"
                                Width="28"
                                Height="28"
                                Margin="0,0,4,0"
                                Padding="0"
                                Command="{Binding Clear, RelativeSource={RelativeSource AncestorType={x:Type ui:SearchBox}}}"
                                Visibility="Collapsed"
                                Cursor="Arrow">

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            Background="Transparent"
                                            CornerRadius="4"
                                            Width="24"
                                            Height="24"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">

                                            <Path
                                                Data="M18,6 L6,18 M6,6 L18,18"
                                                Stroke="{DynamicResource Brush.Text.Secondary}"
                                                StrokeThickness="1.5"
                                                Width="12"
                                                Height="12"
                                                Stretch="Uniform"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" />

                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal" />
                                                    <VisualState x:Name="MouseOver">
                                                        <Storyboard>
                                                            <ObjectAnimationUsingKeyFrames
                                                                Storyboard.TargetName="(Border)"
                                                                Storyboard.TargetProperty="Background"
                                                                Duration="0">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{DynamicResource Brush.Button.HoverBackground}" />
                                                            </ObjectAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="Pressed">
                                                        <Storyboard>
                                                            <ObjectAnimationUsingKeyFrames
                                                                Storyboard.TargetName="(Border)"
                                                                Storyboard.TargetProperty="Background"
                                                                Duration="0">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{DynamicResource Brush.Button.PressedBackground}" />
                                                            </ObjectAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames
                                            Storyboard.TargetName="Border"
                                            Storyboard.TargetProperty="BorderBrush"
                                            Duration="0">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{DynamicResource Brush.TextBox.HoverBorder}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="Border"
                                            Storyboard.TargetProperty="Opacity"
                                            To="0.5"
                                            Duration="0" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Unfocused" />
                                <VisualState x:Name="Focused">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames
                                            Storyboard.TargetName="Border"
                                            Storyboard.TargetProperty="BorderBrush"
                                            Duration="0">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{DynamicResource Brush.TextBox.FocusBorder}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- 显示/隐藏占位符文本 -->
                        <Trigger SourceName="TextBoxPart" Property="Text" Value="">
                            <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <!-- 显示/隐藏清除按钮 -->
                        <Trigger SourceName="TextBoxPart" Property="Text" Value="">
                            <Setter TargetName="ClearButton" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger SourceName="TextBoxPart" Property="IsFocused" Value="True">
                            <Setter TargetName="ClearButton" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
