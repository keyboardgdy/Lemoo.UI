<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:ui="clr-namespace:Lemoo.UI.Controls">

    <!-- ============================================
         Snackbar 样式
         ============================================ -->

    <!-- Snackbar 基础样式 -->
    <Style x:Key="Snackbar.DefaultStyle" TargetType="{x:Type ui:Snackbar}">
        <Setter Property="Background" Value="{DynamicResource NotificationBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource NotificationForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource NotificationBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="{StaticResource FontFamily.Default}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ui:Snackbar}">
                    <Border x:Name="RootBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}"
                            MinWidth="280"
                            MaxWidth="{TemplateBinding MaxWidth}"
                            MinHeight="{TemplateBinding MinHeight}"
                            Effect="{StaticResource Shadow.Medium}"
                            Opacity="0"
                            RenderTransformOrigin="0.5,1">
                        <Border.RenderTransform>
                            <TranslateTransform x:Name="SlideTransform" Y="20"/>
                        </Border.RenderTransform>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 图标 -->
                            <TextBlock x:Name="IconTextBlock"
                                       Grid.Column="0"
                                       Text="&#xE897;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"
                                       Visibility="Collapsed"/>

                            <!-- 消息文本 -->
                            <TextBlock Grid.Column="1"
                                       Text="{TemplateBinding Message}"
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap"/>

                            <!-- 操作和关闭按钮 -->
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Margin="12,0,0,0">
                                <!-- 操作按钮 -->
                                <Button x:Name="ActionButton"
                                        Content="{TemplateBinding ActionButtonContent}"
                                        Style="{StaticResource Snackbar.ButtonStyle}"
                                        Visibility="Collapsed"/>

                                <!-- 关闭按钮 -->
                                <Button x:Name="CloseButton"
                                        Width="32"
                                        Height="32"
                                        Margin="8,0,0,0"
                                        Style="{StaticResource Snackbar.CloseButtonStyle}"
                                        Visibility="Collapsed"/>
                            </StackPanel>
                        </Grid>

                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 淡入效果 -->
                                        <DoubleAnimation Storyboard.TargetName="RootBorder"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="1"
                                                       Duration="{StaticResource AnimationDuration.Normal}">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- 滑入效果 -->
                                        <DoubleAnimation Storyboard.TargetName="SlideTransform"
                                                       Storyboard.TargetProperty="Y"
                                                       To="0"
                                                       Duration="{StaticResource AnimationDuration.Normal}">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="ShowIcon" Value="True">
                            <Setter TargetName="IconTextBlock" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="ShowCloseButton" Value="True">
                            <Setter TargetName="CloseButton" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding ActionButtonContent, RelativeSource={RelativeSource TemplatedParent}}" Value="{x:Null}">
                            <Setter TargetName="ActionButton" Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <Trigger Property="ActionButtonContent" Value="{x:Null}">
                            <Setter TargetName="ActionButton" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="ActionButtonContent" Value="">
                            <Setter TargetName="ActionButton" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Snackbar 操作按钮样式 -->
    <Style x:Key="Snackbar.ButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource NotificationForegroundBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="4">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource NotificationForegroundBrush}"/>
                            <Setter TargetName="Border" Property="Opacity" Value="0.1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Snackbar 关闭按钮样式 -->
    <Style x:Key="Snackbar.CloseButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource NotificationForegroundBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="4">
                        <TextBlock Text="&#xE106;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="14"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource NotificationForegroundBrush}"/>
                            <Setter TargetName="Border" Property="Opacity" Value="0.1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 基于 Info 类型的 Snackbar 样式 -->
    <Style x:Key="Snackbar.Info" TargetType="{x:Type ui:Snackbar}" BasedOn="{StaticResource Snackbar.DefaultStyle}">
        <Setter Property="Background" Value="{DynamicResource NotificationBackgroundBrush}"/>
    </Style>

    <!-- 基于 Success 类型的 Snackbar 样式 -->
    <Style x:Key="Snackbar.Success" TargetType="{x:Type ui:Snackbar}" BasedOn="{StaticResource Snackbar.DefaultStyle}">
        <Setter Property="Background" Value="{DynamicResource Brush.Semantic.Success.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Semantic.Success.Foreground}"/>
    </Style>

    <!-- 基于 Warning 类型的 Snackbar 样式 -->
    <Style x:Key="Snackbar.Warning" TargetType="{x:Type ui:Snackbar}" BasedOn="{StaticResource Snackbar.DefaultStyle}">
        <Setter Property="Background" Value="{DynamicResource Brush.Semantic.Warning.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Semantic.Warning.Foreground}"/>
    </Style>

    <!-- 基于 Error 类型的 Snackbar 样式 -->
    <Style x:Key="Snackbar.Error" TargetType="{x:Type ui:Snackbar}" BasedOn="{StaticResource Snackbar.DefaultStyle}">
        <Setter Property="Background" Value="{DynamicResource Brush.Semantic.Error.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Semantic.Error.Foreground}"/>
    </Style>

    <!-- 默认样式 -->
    <Style TargetType="{x:Type ui:Snackbar}" BasedOn="{StaticResource Snackbar.DefaultStyle}"/>

</ResourceDictionary>
