<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:Lemoo.UI.Controls">

    <!-- ToggleSwitch 默认样式 -->
    <Style TargetType="{x:Type ui:ToggleSwitch}" x:Key="{x:Type ui:ToggleSwitch}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="MinHeight" Value="40" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ui:ToggleSwitch}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}"
                        MinHeight="{TemplateBinding MinHeight}"
                        SnapsToDevicePixels="True">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Header 内容 -->
                            <ContentPresenter
                                Grid.Column="0"
                                Content="{TemplateBinding Header}"
                                TextElement.Foreground="{TemplateBinding Foreground}"
                                VerticalAlignment="Center"
                                Margin="0,0,12,0" />

                            <!-- 开关按钮 -->
                            <ToggleButton
                                x:Name="TogglePart"
                                Grid.Column="1"
                                IsChecked="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                Width="52"
                                Height="28"
                                SnapsToDevicePixels="True">

                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border
                                            x:Name="ToggleBorder"
                                            Width="52"
                                            Height="28"
                                            CornerRadius="14"
                                            Background="{DynamicResource Brush.ToggleSwitch.OffBackground}"
                                            BorderBrush="{DynamicResource Brush.ToggleSwitch.OffBorder}"
                                            BorderThickness="1"
                                            SnapsToDevicePixels="True">

                                            <Grid>
                                                <!-- 滑块 -->
                                                <Ellipse
                                                    x:Name="ToggleKnob"
                                                    Width="20"
                                                    Height="20"
                                                    Fill="{DynamicResource Brush.ToggleSwitch.Knob}"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    Margin="3,0,0,0"
                                                    StrokeThickness="0" />
                                            </Grid>

                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CheckStates">
                                                    <VisualState x:Name="Checked">
                                                        <Storyboard>
                                                            <!-- 滑块移动到右侧 -->
                                                            <ThicknessAnimation
                                                                Storyboard.TargetName="ToggleKnob"
                                                                Storyboard.TargetProperty="(FrameworkElement.Margin)"
                                                                To="25,0,0,0"
                                                                Duration="0:0:0.2">
                                                                <ThicknessAnimation.EasingFunction>
                                                                    <CubicEase EasingMode="EaseOut" />
                                                                </ThicknessAnimation.EasingFunction>
                                                            </ThicknessAnimation>
                                                        </Storyboard>
                                                    </VisualState>

                                                    <VisualState x:Name="Unchecked">
                                                        <Storyboard>
                                                            <!-- 滑块移动到左侧 -->
                                                            <ThicknessAnimation
                                                                Storyboard.TargetName="ToggleKnob"
                                                                Storyboard.TargetProperty="(FrameworkElement.Margin)"
                                                                To="3,0,0,0"
                                                                Duration="0:0:0.2">
                                                                <ThicknessAnimation.EasingFunction>
                                                                    <CubicEase EasingMode="EaseOut" />
                                                                </ThicknessAnimation.EasingFunction>
                                                            </ThicknessAnimation>
                                                        </Storyboard>
                                                    </VisualState>

                                                    <VisualState x:Name="Indeterminate" />
                                                </VisualStateGroup>

                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualState x:Name="Normal" />

                                                    <VisualState x:Name="MouseOver">
                                                        <Storyboard>
                                                            <ObjectAnimationUsingKeyFrames
                                                                Storyboard.TargetName="ToggleBorder"
                                                                Storyboard.TargetProperty="BorderBrush"
                                                                Duration="0">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{DynamicResource Brush.ToggleSwitch.HoverBorder}" />
                                                            </ObjectAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </VisualState>

                                                    <VisualState x:Name="Pressed">
                                                        <Storyboard>
                                                            <ObjectAnimationUsingKeyFrames
                                                                Storyboard.TargetName="ToggleBorder"
                                                                Storyboard.TargetProperty="BorderBrush"
                                                                Duration="0">
                                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{DynamicResource Brush.ToggleSwitch.PressedBorder}" />
                                                            </ObjectAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </VisualState>

                                                    <VisualState x:Name="Disabled">
                                                        <Storyboard>
                                                            <DoubleAnimation
                                                                Storyboard.TargetName="ToggleBorder"
                                                                Storyboard.TargetProperty="Opacity"
                                                                To="0.5"
                                                                Duration="0" />
                                                        </Storyboard>
                                                    </VisualState>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Checked 状态：使用开启颜色 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="TogglePart" Property="Background" Value="{DynamicResource Brush.ToggleSwitch.OnBackground}" />
                            <Setter TargetName="TogglePart" Property="BorderBrush" Value="{DynamicResource Brush.ToggleSwitch.OnBorder}" />
                        </Trigger>

                        <!-- Unchecked 状态：使用关闭颜色 -->
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="TogglePart" Property="Background" Value="{DynamicResource Brush.ToggleSwitch.OffBackground}" />
                            <Setter TargetName="TogglePart" Property="BorderBrush" Value="{DynamicResource Brush.ToggleSwitch.OffBorder}" />
                        </Trigger>

                        <!-- 禁用状态 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
