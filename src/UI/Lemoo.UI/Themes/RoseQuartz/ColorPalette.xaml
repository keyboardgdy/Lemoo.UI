<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================
         玫瑰石英主题配色方案
         Rose Quartz Theme - 柔和优雅的粉紫色调
         灵感来自天然玫瑰石英的温润质感
         ============================================ -->

    <!-- 主背景色系 -->
    <Color x:Key="Palette.Background.Primary">#1A1520</Color>
    <Color x:Key="Palette.Background.Secondary">#12101A</Color>
    <Color x:Key="Palette.Background.Tertiary">#1F1828</Color>

    <!-- 表面色系（卡片、面板） -->
    <Color x:Key="Palette.Surface.Primary">#2A2232</Color>
    <Color x:Key="Palette.Surface.Secondary">#342A3E</Color>
    <Color x:Key="Palette.Surface.Elevated">#3E324A</Color>

    <!-- 强调色系 -->
    <Color x:Key="Palette.Accent.Primary">#E8B4BC</Color>
    <Color x:Key="Palette.Accent.Secondary">#C9A2CA</Color>
    <Color x:Key="Palette.Accent.Hover">#F0C4CC</Color>
    <Color x:Key="Palette.Accent.Pressed">#D09A9C</Color>

    <!-- 文本色系 -->
    <Color x:Key="Palette.Text.Primary">#F5E6E8</Color>
    <Color x:Key="Palette.Text.Secondary">#E0D0D8</Color>
    <Color x:Key="Palette.Text.Tertiary">#9A8A98</Color>
    <Color x:Key="Palette.Text.Disabled">#5A4A58</Color>
    <Color x:Key="Palette.Text.Inverse">#FFFFFF</Color>

    <!-- 边框色系 -->
    <Color x:Key="Palette.Border.Primary">#E8B4BC</Color>
    <Color x:Key="Palette.Border.Secondary">#3A3248</Color>
    <Color x:Key="Palette.Border.Focus">#E8B4BC</Color>

    <!-- 分隔符 -->
    <Color x:Key="Palette.Divider.Primary">#3A3248</Color>
    <Color x:Key="Palette.Divider.Secondary">#2A2232</Color>

    <!-- 状态色系 -->
    <Color x:Key="Palette.State.Hover">#342A3E</Color>
    <Color x:Key="Palette.State.Pressed">#E8B4BC</Color>
    <Color x:Key="Palette.State.Selected">#E8B4BC</Color>
    <Color x:Key="Palette.State.Disabled">#2A2232</Color>

    <!-- 阴影色 -->
    <Color x:Key="Palette.Shadow.Primary">#000000</Color>

    <!-- 透明色（用于动画） -->
    <Color x:Key="Palette.Transparent">#00000000</Color>

</ResourceDictionary>
