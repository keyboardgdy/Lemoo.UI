<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ============================================
         浅色主题配色方案（仿 VS Light）
         基于 Visual Studio Light 主题配色
         确保文本对比度 ≥ 4.5:1（WCAG AA 标准）
         ============================================ -->
    
    <!-- 主背景色系（VS Light 风格） -->
    <Color x:Key="Palette.Background.Primary">#FFFFFF</Color>
    <Color x:Key="Palette.Background.Secondary">#F3F3F3</Color>
    <Color x:Key="Palette.Background.Tertiary">#F9F9F9</Color>
    
    <!-- 表面色系（卡片、面板） -->
    <Color x:Key="Palette.Surface.Primary">#F3F3F3</Color>
    <Color x:Key="Palette.Surface.Secondary">#F9F9F9</Color>
    <Color x:Key="Palette.Surface.Elevated">#FFFFFF</Color>
    
    <!-- 强调色系（VS 蓝色，与 Dark 保持一致） -->
    <Color x:Key="Palette.Accent.Primary">#007ACC</Color>
    <Color x:Key="Palette.Accent.Secondary">#005A9E</Color>
    <Color x:Key="Palette.Accent.Hover">#1C97EA</Color>
    <Color x:Key="Palette.Accent.Pressed">#005A9E</Color>
    
    <!-- 文本色系（VS Light 风格，确保对比度 ≥ 4.5:1） -->
    <Color x:Key="Palette.Text.Primary">#1E1E1E</Color>
    <Color x:Key="Palette.Text.Secondary">#6E6E6E</Color>
    <Color x:Key="Palette.Text.Tertiary">#858585</Color>
    <Color x:Key="Palette.Text.Disabled">#B0B0B0</Color>
    <Color x:Key="Palette.Text.Inverse">#FFFFFF</Color>
    
    <!-- 边框色系 -->
    <Color x:Key="Palette.Border.Primary">#E1E1E1</Color>
    <Color x:Key="Palette.Border.Secondary">#D0D0D0</Color>
    <Color x:Key="Palette.Border.Focus">#007ACC</Color>
    
    <!-- 分隔符 -->
    <Color x:Key="Palette.Divider.Primary">#E1E1E1</Color>
    <Color x:Key="Palette.Divider.Secondary">#D0D0D0</Color>
    
    <!-- 状态色系 -->
    <Color x:Key="Palette.State.Hover">#E8E8E8</Color>
    <Color x:Key="Palette.State.Pressed">#D0D0D0</Color>
    <Color x:Key="Palette.State.Selected">#C9DEF5</Color>
    <Color x:Key="Palette.State.Disabled">#F3F3F3</Color>
    
    <!-- 阴影色 -->
    <Color x:Key="Palette.Shadow.Primary">#000000</Color>
    
    <!-- 透明色（用于动画） -->
    <Color x:Key="Palette.Transparent">#00000000</Color>
    
</ResourceDictionary>
