<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ============================================
         浅色主题语义令牌层（VS Light 风格）
         覆盖 Base 主题的语义令牌，保持键名一致
         确保所有控件样式自动适配浅色主题
         所有文本颜色对比度 ≥ 4.5:1（WCAG AA）
         ============================================ -->
    
    <!-- 工作台（Workbench） -->
    <Color x:Key="workbench.background">#FAFAFA</Color>
    <Color x:Key="workbench.surface">#FFFFFF</Color>
    <Color x:Key="workbench.card">#FFFFFF</Color>

    <!-- 标题栏（Title Bar） -->
    <Color x:Key="titleBar.background">#E8E8E8</Color>
    <Color x:Key="titleBar.foreground">#1E1E1E</Color>
    <Color x:Key="titleBar.activeBackground">#E8E8E8</Color>
    <Color x:Key="titleBar.inactiveBackground">#E3E3E3</Color>
    <Color x:Key="titleBar.border">#D8D8D8</Color>

    <!-- 侧边栏（Sidebar） -->
    <Color x:Key="sidebar.background">#E8E8E8</Color>
    <Color x:Key="sidebar.foreground">#1E1E1E</Color>
    <Color x:Key="sidebar.hoverBackground">#DDDDDD</Color>
    <Color x:Key="sidebar.selectedBackground">#C9DEF5</Color>
    <Color x:Key="sidebar.selectedForeground">#1E1E1E</Color>
    <Color x:Key="sidebar.border">#D8D8D8</Color>

    <!-- 菜单（Menu） -->
    <Color x:Key="menu.background">#E8E8E8</Color>
    <Color x:Key="menu.foreground">#1E1E1E</Color>
    <Color x:Key="menu.border">#D8D8D8</Color>
    <Color x:Key="menu.hoverBackground">#DDDDDD</Color>
    <Color x:Key="menu.selectedBackground">#C9DEF5</Color>
    <Color x:Key="menu.selectedForeground">#1E1E1E</Color>
    <Color x:Key="menu.separator">#D5D5D5</Color>
    
    <!-- 菜单项（MenuItem） -->
    <Color x:Key="menuItem.background">#00000000</Color>
    <Color x:Key="menuItem.foreground">#1E1E1E</Color>
    <Color x:Key="menuItem.hoverBackground">#E8E8E8</Color>
    <Color x:Key="menuItem.selectedBackground">#C9DEF5</Color>
    <Color x:Key="menuItem.selectedForeground">#1E1E1E</Color>
    <Color x:Key="menuItem.highlightedBackground">#007ACC</Color>
    
    <!-- 按钮（Button） -->
    <Color x:Key="button.background">#00000000</Color>
    <Color x:Key="button.foreground">#1E1E1E</Color>
    <Color x:Key="button.hoverBackground">#E5E5E5</Color>
    <Color x:Key="button.pressedBackground">#007ACC</Color>
    <Color x:Key="button.disabledBackground">#F0F0F0</Color>
    <Color x:Key="button.disabledForeground">#B0B0B0</Color>
    <Color x:Key="button.border">#E0E0E0</Color>

    <!-- 标签页（Tab） -->
    <Color x:Key="tab.background">#EBEBEB</Color>
    <Color x:Key="tab.activeBackground">#FAFAFA</Color>
    <Color x:Key="tab.foreground">#6E6E6E</Color>
    <Color x:Key="tab.activeForeground">#1E1E1E</Color>
    <Color x:Key="tab.hoverBackground">#E0E0E0</Color>
    <Color x:Key="tab.selectedBackground">#C9DEF5</Color>
    <Color x:Key="tab.selectedForeground">#1E1E1E</Color>
    <Color x:Key="tab.border">#DCDCDC</Color>

    <!-- 输入框（Input） -->
    <Color x:Key="input.background">#FFFFFF</Color>
    <Color x:Key="input.foreground">#1E1E1E</Color>
    <Color x:Key="input.border">#D0D0D0</Color>
    <Color x:Key="input.focusBorder">#007ACC</Color>
    <Color x:Key="input.placeholder">#858585</Color>

    <!-- 分隔符（Separator） -->
    <Color x:Key="separator.background">#DCDCDC</Color>
    
    <!-- 滚动条（Scrollbar） -->
    <Color x:Key="scrollbar.shadow">#000000</Color>
    <Color x:Key="scrollbar.sliderBackground">#C1C1C1</Color>
    <Color x:Key="scrollbar.sliderHoverBackground">#A8A8A8</Color>
    
    <!-- 状态栏（Status Bar） -->
    <Color x:Key="statusBar.background">#E8E8E8</Color>
    <Color x:Key="statusBar.foreground">#1E1E1E</Color>
    
    <!-- 通知（Notification/Toast） -->
    <Color x:Key="notification.background">#FFFFFF</Color>
    <Color x:Key="notification.border">#E1E1E1</Color>
    <Color x:Key="notification.foreground">#1E1E1E</Color>
    
    <!-- 下拉菜单（Dropdown） -->
    <Color x:Key="dropdown.background">#FFFFFF</Color>
    <Color x:Key="dropdown.foreground">#1E1E1E</Color>
    <Color x:Key="dropdown.border">#E1E1E1</Color>
    <Color x:Key="dropdown.hoverBackground">#E8E8E8</Color>

    <!-- 卡片（Card） -->
    <Color x:Key="card.background">#FFFFFF</Color>
    <Color x:Key="card.border">#E5E5E5</Color>
    <Color x:Key="card.hoverBackground">#FAFAFA</Color>

    <!-- 列表项（ListItem） -->
    <Color x:Key="listItem.background">#00000000</Color>
    <Color x:Key="listItem.hoverBackground">#F0F0F0</Color>
    <Color x:Key="listItem.selectedBackground">#C9DEF5</Color>

    <!-- 弹出层（Popup） -->
    <Color x:Key="popup.background">#FFFFFF</Color>
    <Color x:Key="popup.border">#E1E1E1</Color>

    <!-- 开关（ToggleSwitch） -->
    <Color x:Key="toggleSwitch.offBackground">#E0E0E0</Color>
    <Color x:Key="toggleSwitch.offBorder">#D0D0D0</Color>
    <Color x:Key="toggleSwitch.onBackground">#007ACC</Color>
    <Color x:Key="toggleSwitch.onBorder">#007ACC</Color>
    <Color x:Key="toggleSwitch.knob">#FFFFFF</Color>
    <Color x:Key="toggleSwitch.knobOn">#FFFFFF</Color>
    <Color x:Key="toggleSwitch.hoverBorder">#0098FF</Color>
    <Color x:Key="toggleSwitch.pressedBorder">#005A9E</Color>

    <!-- NumericUpDown -->
    <Color x:Key="numericUpDown.buttonBackground">#E8E8E8</Color>
    <Color x:Key="numericUpDown.buttonHoverBackground">#DDDDDD</Color>
    <Color x:Key="numericUpDown.buttonPressedBackground">#D0D0D0</Color>

    <!-- 文本（Text） -->
    <Color x:Key="text.primary">#1E1E1E</Color>
    <Color x:Key="text.secondary">#666666</Color>
    <Color x:Key="text.disabled">#B0B0B0</Color>
    <Color x:Key="text.onDark">#FFFFFF</Color>

    <!-- 边框（Border） -->
    <Color x:Key="border.default">#D0D0D0</Color>
    <Color x:Key="border.focus">#007ACC</Color>
    <Color x:Key="separator">#DCDCDC</Color>

    <!-- 阴影（Shadow） -->
    <Color x:Key="shadow.color">#000000</Color>

    <!-- 语义颜色（Semantic） -->
    <Color x:Key="semantic.success.background">#107C10</Color>
    <Color x:Key="semantic.success.foreground">#FFFFFF</Color>
    <Color x:Key="semantic.success.border">#0B5C0B</Color>

    <Color x:Key="semantic.warning.background">#9B59B6</Color>
    <Color x:Key="semantic.warning.foreground">#FFFFFF</Color>
    <Color x:Key="semantic.warning.border">#8E44AD</Color>

    <Color x:Key="semantic.error.background">#D13438</Color>
    <Color x:Key="semantic.error.foreground">#FFFFFF</Color>
    <Color x:Key="semantic.error.border">#A1260D</Color>

    <Color x:Key="semantic.info.background">#0078D4</Color>
    <Color x:Key="semantic.info.foreground">#FFFFFF</Color>
    <Color x:Key="semantic.info.border">#005A9E</Color>

</ResourceDictionary>
