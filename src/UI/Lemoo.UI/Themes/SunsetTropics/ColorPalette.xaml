<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================
         热带夕阳主题配色方案
         ============================================ -->

    <!-- 主背景色系 -->
    <Color x:Key="Palette.Background.Primary">#FFF8F0</Color>
    <Color x:Key="Palette.Background.Secondary">#FFF0E6</Color>
    <Color x:Key="Palette.Background.Tertiary">#FFE5D9</Color>

    <!-- 表面色系（卡片、面板） -->
    <Color x:Key="Palette.Surface.Primary">#FFFFFF</Color>
    <Color x:Key="Palette.Surface.Secondary">#FFFBF5</Color>
    <Color x:Key="Palette.Surface.Elevated">#FFFFFF</Color>

    <!-- 强调色系 -->
    <Color x:Key="Palette.Accent.Primary">#FF6B6B</Color>
    <Color x:Key="Palette.Accent.Secondary">#4ECDC4</Color>
    <Color x:Key="Palette.Accent.Hover">#FF7B7B</Color>
    <Color x:Key="Palette.Accent.Pressed">#EE5A5A</Color>

    <!-- 文本色系 -->
    <Color x:Key="Palette.Text.Primary">#2C3E50</Color>
    <Color x:Key="Palette.Text.Secondary">#3A4A5A</Color>
    <Color x:Key="Palette.Text.Tertiary">#7F8C8D</Color>
    <Color x:Key="Palette.Text.Disabled">#B0A090</Color>
    <Color x:Key="Palette.Text.Inverse">#FFFFFF</Color>

    <!-- 边框色系 -->
    <Color x:Key="Palette.Border.Primary">#FFCCBA</Color>
    <Color x:Key="Palette.Border.Secondary">#FFE5D9</Color>
    <Color x:Key="Palette.Border.Focus">#4ECDC4</Color>

    <!-- 分隔符 -->
    <Color x:Key="Palette.Divider.Primary">#FFCCBA</Color>
    <Color x:Key="Palette.Divider.Secondary">#FFD9C4</Color>

    <!-- 状态色系 -->
    <Color x:Key="Palette.State.Hover">#FFF0E6</Color>
    <Color x:Key="Palette.State.Pressed">#FF6B6B</Color>
    <Color x:Key="Palette.State.Selected">#4ECDC4</Color>
    <Color x:Key="Palette.State.Disabled">#F5E6D8</Color>

    <!-- 阴影色 -->
    <Color x:Key="Palette.Shadow.Primary">#000000</Color>

    <!-- 透明色（用于动画） -->
    <Color x:Key="Palette.Transparent">#00000000</Color>

</ResourceDictionary>
