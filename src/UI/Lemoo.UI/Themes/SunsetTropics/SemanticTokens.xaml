<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================
         热带夕阳主题 (Sunset Tropics)
         灵感来源于热带海滩的夕阳景色
         采用温暖的大地色系与活力的珊瑚橙、青绿色的融合
         主色调：珊瑚橙 #FF6B6B、热带青 #4ECDC4、沙滩金 #FFE66D
         强调色：夕阳红 #EE5A5A、海蓝 #2980B9
         ============================================ -->

    <!-- 工作台 (Workbench) -->
    <Color x:Key="workbench.background">#FFF8F0</Color>
    <Color x:Key="workbench.surface">#FFFFFF</Color>
    <Color x:Key="workbench.card">#FFFBF5</Color>

    <!-- 标题栏 (Title Bar) -->
    <Color x:Key="titleBar.background">#FFE5D9</Color>
    <Color x:Key="titleBar.foreground">#2C3E50</Color>
    <Color x:Key="titleBar.activeBackground">#FFE5D9</Color>
    <Color x:Key="titleBar.inactiveBackground">#FFD9C4</Color>
    <Color x:Key="titleBar.border">#FF6B6B</Color>

    <!-- 侧边栏 (Sidebar) -->
    <Color x:Key="sidebar.background">#FFE5D9</Color>
    <Color x:Key="sidebar.foreground">#2C3E50</Color>
    <Color x:Key="sidebar.hoverBackground">#FFD9C4</Color>
    <Color x:Key="sidebar.selectedBackground">#4ECDC4</Color>
    <Color x:Key="sidebar.selectedForeground">#FFFFFF</Color>
    <Color x:Key="sidebar.border">#FFCCBA</Color>

    <!-- 菜单 (Menu) -->
    <Color x:Key="menu.background">#FFFFFF</Color>
    <Color x:Key="menu.foreground">#2C3E50</Color>
    <Color x:Key="menu.border">#FFCCBA</Color>
    <Color x:Key="menu.hoverBackground">#FFF0E6</Color>
    <Color x:Key="menu.selectedBackground">#4ECDC4</Color>
    <Color x:Key="menu.selectedForeground">#FFFFFF</Color>
    <Color x:Key="menu.separator">#FFCCBA</Color>

    <!-- 菜单项 (MenuItem) -->
    <Color x:Key="menuItem.background">#00000000</Color>
    <Color x:Key="menuItem.foreground">#2C3E50</Color>
    <Color x:Key="menuItem.hoverBackground">#FFF0E6</Color>
    <Color x:Key="menuItem.selectedBackground">#4ECDC4</Color>
    <Color x:Key="menuItem.selectedForeground">#FFFFFF</Color>
    <Color x:Key="menuItem.highlightedBackground">#FF6B6B</Color>

    <!-- 按钮 (Button) -->
    <Color x:Key="button.background">#00000000</Color>
    <Color x:Key="button.foreground">#2C3E50</Color>
    <Color x:Key="button.hoverBackground">#FFF0E6</Color>
    <Color x:Key="button.pressedBackground">#FF6B6B</Color>
    <Color x:Key="button.disabledBackground">#F5E6D8</Color>
    <Color x:Key="button.disabledForeground">#B0A090</Color>
    <Color x:Key="button.border">#FFCCBA</Color>

    <!-- 标签页 (Tab) -->
    <Color x:Key="tab.background">#FFEBE0</Color>
    <Color x:Key="tab.activeBackground">#FFF8F0</Color>
    <Color x:Key="tab.foreground">#7F8C8D</Color>
    <Color x:Key="tab.activeForeground">#2C3E50</Color>
    <Color x:Key="tab.hoverBackground">#FFE5D9</Color>
    <Color x:Key="tab.selectedBackground">#4ECDC4</Color>
    <Color x:Key="tab.selectedForeground">#FFFFFF</Color>
    <Color x:Key="tab.border">#FFCCBA</Color>

    <!-- 输入框 (Input) -->
    <Color x:Key="input.background">#FFFFFF</Color>
    <Color x:Key="input.foreground">#2C3E50</Color>
    <Color x:Key="input.border">#FFCCBA</Color>
    <Color x:Key="input.focusBorder">#4ECDC4</Color>
    <Color x:Key="input.placeholder">#95A5A6</Color>

    <!-- 分隔符 (Separator) -->
    <Color x:Key="separator.background">#FFCCBA</Color>

    <!-- 滚动条 (Scrollbar) -->
    <Color x:Key="scrollbar.shadow">#000000</Color>
    <Color x:Key="scrollbar.sliderBackground">#FFD9C4</Color>
    <Color x:Key="scrollbar.sliderHoverBackground">#4ECDC4</Color>

    <!-- 状态栏 (Status Bar) -->
    <Color x:Key="statusBar.background">#FFE5D9</Color>
    <Color x:Key="statusBar.foreground">#2C3E50</Color>

    <!-- 通知 (Notification/Toast) -->
    <Color x:Key="notification.background">#FFFFFF</Color>
    <Color x:Key="notification.border">#FFCCBA</Color>
    <Color x:Key="notification.foreground">#2C3E50</Color>

    <!-- 下拉菜单 (Dropdown) -->
    <Color x:Key="dropdown.background">#FFFFFF</Color>
    <Color x:Key="dropdown.foreground">#2C3E50</Color>
    <Color x:Key="dropdown.border">#FFCCBA</Color>
    <Color x:Key="dropdown.hoverBackground">#FFF0E6</Color>

</ResourceDictionary>
