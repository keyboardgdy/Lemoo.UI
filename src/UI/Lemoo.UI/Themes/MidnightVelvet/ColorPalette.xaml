<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================
         午夜丝绒主题配色方案
         Midnight Velvet Theme - 奢华的金紫配色
         灵感来自午夜时分的高贵与优雅
         ============================================ -->

    <!-- 主背景色系 -->
    <Color x:Key="Palette.Background.Primary">#0F0A18</Color>
    <Color x:Key="Palette.Background.Secondary">#0A0612</Color>
    <Color x:Key="Palette.Background.Tertiary">#140E20</Color>

    <!-- 表面色系（卡片、面板） -->
    <Color x:Key="Palette.Surface.Primary">#1A1428</Color>
    <Color x:Key="Palette.Surface.Secondary">#241C35</Color>
    <Color x:Key="Palette.Surface.Elevated">#2E2442</Color>

    <!-- 强调色系 -->
    <Color x:Key="Palette.Accent.Primary">#D4AF37</Color>
    <Color x:Key="Palette.Accent.Secondary">#9B59B6</Color>
    <Color x:Key="Palette.Accent.Hover">#E4BF47</Color>
    <Color x:Key="Palette.Accent.Pressed">#C49F27</Color>

    <!-- 文本色系 -->
    <Color x:Key="Palette.Text.Primary">#F5E6F0</Color>
    <Color x:Key="Palette.Text.Secondary">#E5D6E8</Color>
    <Color x:Key="Palette.Text.Tertiary">#9A8AA0</Color>
    <Color x:Key="Palette.Text.Disabled">#4A3A55</Color>
    <Color x:Key="Palette.Text.Inverse">#FFFFFF</Color>

    <!-- 边框色系 -->
    <Color x:Key="Palette.Border.Primary">#D4AF37</Color>
    <Color x:Key="Palette.Border.Secondary">#2E2442</Color>
    <Color x:Key="Palette.Border.Focus">#D4AF37</Color>

    <!-- 分隔符 -->
    <Color x:Key="Palette.Divider.Primary">#2E2442</Color>
    <Color x:Key="Palette.Divider.Secondary">#1A1428</Color>

    <!-- 状态色系 -->
    <Color x:Key="Palette.State.Hover">#241C35</Color>
    <Color x:Key="Palette.State.Pressed">#D4AF37</Color>
    <Color x:Key="Palette.State.Selected">#D4AF37</Color>
    <Color x:Key="Palette.State.Disabled">#1A1428</Color>

    <!-- 阴影色 -->
    <Color x:Key="Palette.Shadow.Primary">#000000</Color>

    <!-- 透明色（用于动画） -->
    <Color x:Key="Palette.Transparent">#00000000</Color>

</ResourceDictionary>
