<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ============================================
         深色主题语义令牌层（VS Dark 风格）
         覆盖 Base 主题的语义令牌，保持键名一致
         确保所有控件样式自动适配深色主题
         ============================================ -->
    
    <!-- 工作台（Workbench） -->
    <Color x:Key="workbench.background">#1E1E1E</Color>
    <Color x:Key="workbench.surface">#252526</Color>
    <Color x:Key="workbench.card">#252526</Color>
    
    <!-- 标题栏（Title Bar） -->
    <Color x:Key="titleBar.background">#1E1E1E</Color>
    <Color x:Key="titleBar.foreground">#E0E0E0</Color>
    <Color x:Key="titleBar.activeBackground">#1E1E1E</Color>
    <Color x:Key="titleBar.inactiveBackground">#252526</Color>
    <Color x:Key="titleBar.border">#3E3E42</Color>
    
    <!-- 侧边栏（Sidebar） -->
    <Color x:Key="sidebar.background">#252526</Color>
    <Color x:Key="sidebar.foreground">#E0E0E0</Color>
    <Color x:Key="sidebar.hoverBackground">#292929</Color>
    <Color x:Key="sidebar.selectedBackground">#094771</Color>
    <Color x:Key="sidebar.selectedForeground">#FFFFFF</Color>
    <Color x:Key="sidebar.border">#3E3E42</Color>
    
    <!-- 菜单（Menu） -->
    <Color x:Key="menu.background">#252526</Color>
    <Color x:Key="menu.foreground">#E0E0E0</Color>
    <Color x:Key="menu.border">#3E3E42</Color>
    <Color x:Key="menu.hoverBackground">#292929</Color>
    <Color x:Key="menu.selectedBackground">#094771</Color>
    <Color x:Key="menu.selectedForeground">#FFFFFF</Color>
    <Color x:Key="menu.separator">#3E3E42</Color>
    
    <!-- 菜单项（MenuItem） -->
    <Color x:Key="menuItem.background">#00000000</Color>
    <Color x:Key="menuItem.foreground">#E0E0E0</Color>
    <Color x:Key="menuItem.hoverBackground">#292929</Color>
    <Color x:Key="menuItem.selectedBackground">#094771</Color>
    <Color x:Key="menuItem.selectedForeground">#FFFFFF</Color>
    <Color x:Key="menuItem.highlightedBackground">#007ACC</Color>
    
    <!-- 按钮（Button） -->
    <Color x:Key="button.background">#00000000</Color>
    <Color x:Key="button.foreground">#E0E0E0</Color>
    <Color x:Key="button.hoverBackground">#292929</Color>
    <Color x:Key="button.pressedBackground">#007ACC</Color>
    <Color x:Key="button.disabledBackground">#3E3E42</Color>
    <Color x:Key="button.disabledForeground">#555555</Color>
    <Color x:Key="button.border">#3E3E42</Color>
    
    <!-- 标签页（Tab） -->
    <Color x:Key="tab.background">#2D2D30</Color>
    <Color x:Key="tab.activeBackground">#1E1E1E</Color>
    <Color x:Key="tab.foreground">#B0B0B0</Color>
    <Color x:Key="tab.activeForeground">#E0E0E0</Color>
    <Color x:Key="tab.hoverBackground">#3A3A3A</Color>
    <Color x:Key="tab.selectedBackground">#094771</Color>
    <Color x:Key="tab.selectedForeground">#FFFFFF</Color>
    <Color x:Key="tab.border">#3E3E42</Color>
    
    <!-- 输入框（Input） -->
    <Color x:Key="input.background">#3E3E42</Color>
    <Color x:Key="input.foreground">#E0E0E0</Color>
    <Color x:Key="input.border">#3E3E42</Color>
    <Color x:Key="input.focusBorder">#007ACC</Color>
    <Color x:Key="input.placeholder">#858585</Color>
    
    <!-- 分隔符（Separator） -->
    <Color x:Key="separator.background">#3E3E42</Color>
    
    <!-- 滚动条（Scrollbar） -->
    <Color x:Key="scrollbar.shadow">#000000</Color>
    <Color x:Key="scrollbar.sliderBackground">#424242</Color>
    <Color x:Key="scrollbar.sliderHoverBackground">#4E4E4E</Color>
    
    <!-- 状态栏（Status Bar） -->
    <Color x:Key="statusBar.background">#007ACC</Color>
    <Color x:Key="statusBar.foreground">#FFFFFF</Color>
    
    <!-- 通知（Notification/Toast） -->
    <Color x:Key="notification.background">#252526</Color>
    <Color x:Key="notification.border">#3E3E42</Color>
    <Color x:Key="notification.foreground">#E0E0E0</Color>
    
    <!-- 下拉菜单（Dropdown） -->
    <Color x:Key="dropdown.background">#252526</Color>
    <Color x:Key="dropdown.foreground">#E0E0E0</Color>
    <Color x:Key="dropdown.border">#3E3E42</Color>
    <Color x:Key="dropdown.hoverBackground">#292929</Color>
    
</ResourceDictionary>
