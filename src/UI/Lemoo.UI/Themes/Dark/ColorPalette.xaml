<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ============================================
         深色主题配色方案（仿 VS Dark）
         基于 Visual Studio Dark 主题配色
         ============================================ -->
    
    <!-- 主背景色系（VS Dark 风格） -->
    <Color x:Key="Palette.Background.Primary">#1E1E1E</Color>
    <Color x:Key="Palette.Background.Secondary">#252526</Color>
    <Color x:Key="Palette.Background.Tertiary">#2D2D30</Color>
    
    <!-- 表面色系（卡片、面板） -->
    <Color x:Key="Palette.Surface.Primary">#252526</Color>
    <Color x:Key="Palette.Surface.Secondary">#2D2D30</Color>
    <Color x:Key="Palette.Surface.Elevated">#3E3E42</Color>
    
    <!-- 强调色系（VS 蓝色） -->
    <Color x:Key="Palette.Accent.Primary">#007ACC</Color>
    <Color x:Key="Palette.Accent.Secondary">#005A9E</Color>
    <Color x:Key="Palette.Accent.Hover">#1C97EA</Color>
    <Color x:Key="Palette.Accent.Pressed">#005A9E</Color>
    
    <!-- 文本色系（VS Dark 风格，确保对比度 ≥ 4.5:1） -->
    <Color x:Key="Palette.Text.Primary">#CCCCCC</Color>
    <Color x:Key="Palette.Text.Secondary">#858585</Color>
    <Color x:Key="Palette.Text.Tertiary">#6E6E6E</Color>
    <Color x:Key="Palette.Text.Disabled">#555555</Color>
    <Color x:Key="Palette.Text.Inverse">#FFFFFF</Color>
    
    <!-- 边框色系 -->
    <Color x:Key="Palette.Border.Primary">#3E3E42</Color>
    <Color x:Key="Palette.Border.Secondary">#2D2D30</Color>
    <Color x:Key="Palette.Border.Focus">#007ACC</Color>
    
    <!-- 分隔符 -->
    <Color x:Key="Palette.Divider.Primary">#3E3E42</Color>
    <Color x:Key="Palette.Divider.Secondary">#2D2D30</Color>
    
    <!-- 状态色系 -->
    <Color x:Key="Palette.State.Hover">#2A2D2E</Color>
    <Color x:Key="Palette.State.Pressed">#1E1E1E</Color>
    <Color x:Key="Palette.State.Selected">#094771</Color>
    <Color x:Key="Palette.State.Disabled">#3E3E42</Color>
    
    <!-- 阴影色 -->
    <Color x:Key="Palette.Shadow.Primary">#000000</Color>
    
    <!-- 透明色（用于动画） -->
    <Color x:Key="Palette.Transparent">#00000000</Color>
    
</ResourceDictionary>
