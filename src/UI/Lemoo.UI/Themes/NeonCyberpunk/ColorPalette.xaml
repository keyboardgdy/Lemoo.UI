<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================
         霓虹赛博朋克主题配色方案
         ============================================ -->

    <!-- 主背景色系 -->
    <Color x:Key="Palette.Background.Primary">#0A0A0F</Color>
    <Color x:Key="Palette.Background.Secondary">#08080C</Color>
    <Color x:Key="Palette.Background.Tertiary">#0D0D14</Color>

    <!-- 表面色系（卡片、面板） -->
    <Color x:Key="Palette.Surface.Primary">#1A1A25</Color>
    <Color x:Key="Palette.Surface.Secondary">#12121A</Color>
    <Color x:Key="Palette.Surface.Elevated">#1A1A25</Color>

    <!-- 强调色系 -->
    <Color x:Key="Palette.Accent.Primary">#FF006E</Color>
    <Color x:Key="Palette.Accent.Secondary">#8B5CF6</Color>
    <Color x:Key="Palette.Accent.Hover">#FF1A8A</Color>
    <Color x:Key="Palette.Accent.Pressed">#CC0058</Color>

    <!-- 文本色系 -->
    <Color x:Key="Palette.Text.Primary">#00F5FF</Color>
    <Color x:Key="Palette.Text.Secondary">#E0E0E0</Color>
    <Color x:Key="Palette.Text.Tertiary">#858585</Color>
    <Color x:Key="Palette.Text.Disabled">#3A3A4A</Color>
    <Color x:Key="Palette.Text.Inverse">#FFFFFF</Color>

    <!-- 边框色系 -->
    <Color x:Key="Palette.Border.Primary">#39FF14</Color>
    <Color x:Key="Palette.Border.Secondary">#1A1A25</Color>
    <Color x:Key="Palette.Border.Focus">#FF006E</Color>

    <!-- 分隔符 -->
    <Color x:Key="Palette.Divider.Primary">#39FF14</Color>
    <Color x:Key="Palette.Divider.Secondary">#1A1A25</Color>

    <!-- 状态色系 -->
    <Color x:Key="Palette.State.Hover">#1A1A25</Color>
    <Color x:Key="Palette.State.Pressed">#FF006E</Color>
    <Color x:Key="Palette.State.Selected">#FF006E</Color>
    <Color x:Key="Palette.State.Disabled">#1A1A25</Color>

    <!-- 阴影色 -->
    <Color x:Key="Palette.Shadow.Primary">#000000</Color>

    <!-- 透明色（用于动画） -->
    <Color x:Key="Palette.Transparent">#00000000</Color>

</ResourceDictionary>
