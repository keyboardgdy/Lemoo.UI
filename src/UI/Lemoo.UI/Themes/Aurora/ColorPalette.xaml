<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================
         极光主题配色方案
         ============================================ -->

    <!-- 主背景色系 -->
    <Color x:Key="Palette.Background.Primary">#0F1419</Color>
    <Color x:Key="Palette.Background.Secondary">#0C1014</Color>
    <Color x:Key="Palette.Background.Tertiary">#141C27</Color>

    <!-- 表面色系（卡片、面板） -->
    <Color x:Key="Palette.Surface.Primary">#1E2936</Color>
    <Color x:Key="Palette.Surface.Secondary">#1A2332</Color>
    <Color x:Key="Palette.Surface.Elevated">#1E2936</Color>

    <!-- 强调色系 -->
    <Color x:Key="Palette.Accent.Primary">#00D9A0</Color>
    <Color x:Key="Palette.Accent.Secondary">#4FC3F7</Color>
    <Color x:Key="Palette.Accent.Hover">#00E5B0</Color>
    <Color x:Key="Palette.Accent.Pressed">#00C090</Color>

    <!-- 文本色系 -->
    <Color x:Key="Palette.Text.Primary">#E0F7FA</Color>
    <Color x:Key="Palette.Text.Secondary">#D0E7EA</Color>
    <Color x:Key="Palette.Text.Tertiary">#7A8A9A</Color>
    <Color x:Key="Palette.Text.Disabled">#3A4A5A</Color>
    <Color x:Key="Palette.Text.Inverse">#0F1419</Color>

    <!-- 边框色系 -->
    <Color x:Key="Palette.Border.Primary">#4FC3F7</Color>
    <Color x:Key="Palette.Border.Secondary">#1A2332</Color>
    <Color x:Key="Palette.Border.Focus">#00D9A0</Color>

    <!-- 分隔符 -->
    <Color x:Key="Palette.Divider.Primary">#1A2332</Color>
    <Color x:Key="Palette.Divider.Secondary">#141C27</Color>

    <!-- 状态色系 -->
    <Color x:Key="Palette.State.Hover">#1E2936</Color>
    <Color x:Key="Palette.State.Pressed">#00D9A0</Color>
    <Color x:Key="Palette.State.Selected">#00D9A0</Color>
    <Color x:Key="Palette.State.Disabled">#1A2332</Color>

    <!-- 阴影色 -->
    <Color x:Key="Palette.Shadow.Primary">#000000</Color>

    <!-- 透明色（用于动画） -->
    <Color x:Key="Palette.Transparent">#00000000</Color>

</ResourceDictionary>
