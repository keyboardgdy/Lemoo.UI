<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================
         极光主题 (Aurora Borealis)
         灵感来源于北极光的自然奇观
         采用流动的渐变色彩和柔和的光晕效果
         主色调：极光绿 #00D9A0、冰晶蓝 #4FC3F7、北极紫 #7C4DFF
         强调色：霜冻白 #E0F7FA、午夜蓝 #1A237E
         ============================================ -->

    <!-- 工作台 (Workbench) -->
    <Color x:Key="workbench.background">#0F1419</Color>
    <Color x:Key="workbench.surface">#1A2332</Color>
    <Color x:Key="workbench.card">#1E2936</Color>

    <!-- 标题栏 (Title Bar) -->
    <Color x:Key="titleBar.background">#141C27</Color>
    <Color x:Key="titleBar.foreground">#E0F7FA</Color>
    <Color x:Key="titleBar.activeBackground">#141C27</Color>
    <Color x:Key="titleBar.inactiveBackground">#0F1419</Color>
    <Color x:Key="titleBar.border">#00D9A0</Color>

    <!-- 侧边栏 (Sidebar) -->
    <Color x:Key="sidebar.background">#141C27</Color>
    <Color x:Key="sidebar.foreground">#E0F7FA</Color>
    <Color x:Key="sidebar.hoverBackground">#1A2332</Color>
    <Color x:Key="sidebar.selectedBackground">#00D9A0</Color>
    <Color x:Key="sidebar.selectedForeground">#0F1419</Color>
    <Color x:Key="sidebar.border">#1A2332</Color>

    <!-- 菜单 (Menu) -->
    <Color x:Key="menu.background">#1A2332</Color>
    <Color x:Key="menu.foreground">#E0F7FA</Color>
    <Color x:Key="menu.border">#4FC3F7</Color>
    <Color x:Key="menu.hoverBackground">#1E2936</Color>
    <Color x:Key="menu.selectedBackground">#00D9A0</Color>
    <Color x:Key="menu.selectedForeground">#0F1419</Color>
    <Color x:Key="menu.separator">#1A2332</Color>

    <!-- 菜单项 (MenuItem) -->
    <Color x:Key="menuItem.background">#00000000</Color>
    <Color x:Key="menuItem.foreground">#E0F7FA</Color>
    <Color x:Key="menuItem.hoverBackground">#1E2936</Color>
    <Color x:Key="menuItem.selectedBackground">#00D9A0</Color>
    <Color x:Key="menuItem.selectedForeground">#0F1419</Color>
    <Color x:Key="menuItem.highlightedBackground">#4FC3F7</Color>

    <!-- 按钮 (Button) -->
    <Color x:Key="button.background">#00000000</Color>
    <Color x:Key="button.foreground">#E0F7FA</Color>
    <Color x:Key="button.hoverBackground">#1E2936</Color>
    <Color x:Key="button.pressedBackground">#00D9A0</Color>
    <Color x:Key="button.disabledBackground">#1A2332</Color>
    <Color x:Key="button.disabledForeground">#3A4A5A</Color>
    <Color x:Key="button.border">#4FC3F7</Color>

    <!-- 标签页 (Tab) -->
    <Color x:Key="tab.background">#1A2332</Color>
    <Color x:Key="tab.activeBackground">#0F1419</Color>
    <Color x:Key="tab.foreground">#7C4DFF</Color>
    <Color x:Key="tab.activeForeground">#E0F7FA</Color>
    <Color x:Key="tab.hoverBackground">#1E2936</Color>
    <Color x:Key="tab.selectedBackground">#00D9A0</Color>
    <Color x:Key="tab.selectedForeground">#0F1419</Color>
    <Color x:Key="tab.border">#1A2332</Color>

    <!-- 输入框 (Input) -->
    <Color x:Key="input.background">#0F1419</Color>
    <Color x:Key="input.foreground">#E0F7FA</Color>
    <Color x:Key="input.border">#4FC3F7</Color>
    <Color x:Key="input.focusBorder">#00D9A0</Color>
    <Color x:Key="input.placeholder">#5A6A7A</Color>

    <!-- 分隔符 (Separator) -->
    <Color x:Key="separator.background">#1A2332</Color>

    <!-- 滚动条 (Scrollbar) -->
    <Color x:Key="scrollbar.shadow">#000000</Color>
    <Color x:Key="scrollbar.sliderBackground">#1E2936</Color>
    <Color x:Key="scrollbar.sliderHoverBackground">#00D9A0</Color>

    <!-- 状态栏 (Status Bar) -->
    <Color x:Key="statusBar.background">#141C27</Color>
    <Color x:Key="statusBar.foreground">#00D9A0</Color>

    <!-- 通知 (Notification/Toast) -->
    <Color x:Key="notification.background">#1A2332</Color>
    <Color x:Key="notification.border">#4FC3F7</Color>
    <Color x:Key="notification.foreground">#E0F7FA</Color>

    <!-- 下拉菜单 (Dropdown) -->
    <Color x:Key="dropdown.background">#1A2332</Color>
    <Color x:Key="dropdown.foreground">#E0F7FA</Color>
    <Color x:Key="dropdown.border">#4FC3F7</Color>
    <Color x:Key="dropdown.hoverBackground">#1E2936</Color>

</ResourceDictionary>
