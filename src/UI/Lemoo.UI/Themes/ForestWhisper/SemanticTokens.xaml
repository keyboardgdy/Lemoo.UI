<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================
         森林低语主题语义化令牌
         Forest Whisper Theme - Semantic Tokens
         ============================================ -->

    <!-- 背景色令牌 -->
    <Color x:Key="Semantic.Background.Base">#0D1F12</Color>
    <Color x:Key="Semantic.Background.Layer1">#1A2F24</Color>
    <Color x:Key="Semantic.Background.Layer2">#243A2E</Color>
    <Color x:Key="Semantic.Background.Layer3">#2E4538</Color>
    <Color x:Key="Semantic.Background.Layer4">#385042</Color>
    <Color x:Key="Semantic.Background.Layer5">#425A4C</Color>

    <!-- 表面色令牌 -->
    <Color x:Key="Semantic.Surface.Default">#1A2F24</Color>
    <Color x:Key="Semantic.Surface.Hover">#243A2E</Color>
    <Color x:Key="Semantic.Surface.Pressed">#2E4538</Color>
    <Color x:Key="Semantic.Surface.Selected">#52B788</Color>
    <Color x:Key="Semantic.Surface.Disabled">#102818</Color>

    <!-- 强调色令牌 -->
    <Color x:Key="Semantic.Accent.Default">#52B788</Color>
    <Color x:Key="Semantic.Accent.Hover">#62C798</Color>
    <Color x:Key="Semantic.Accent.Pressed">#42A778</Color>
    <Color x:Key="Semantic.Accent.Selected">#40916C</Color>
    <Color x:Key="Semantic.Accent.Disabled">#385042</Color>
    <Color x:Key="Semantic.Accent.Contrast">#0D1F12</Color>

    <!-- 文本色令牌 -->
    <Color x:Key="Semantic.Text.Primary">#E0F0E8</Color>
    <Color x:Key="Semantic.Text.Secondary">#D0E8E0</Color>
    <Color x:Key="Semantic.Text.Tertiary">#7A9080</Color>
    <Color x:Key="Semantic.Text.Disabled">#3A5040</Color>
    <Color x:Key="Semantic.Text.Inverse">#FFFFFF</Color>
    <Color x:Key="Semantic.Text.OnAccent">#0D1F12</Color>

    <!-- 边框色令牌 -->
    <Color x:Key="Semantic.Border.Default">#2E4538</Color>
    <Color x:Key="Semantic.Border.Hover">#52B788</Color>
    <Color x:Key="Semantic.Border.Pressed">#52B788</Color>
    <Color x:Key="Semantic.Border.Focus">#52B788</Color>
    <Color x:Key="Semantic.Border.Disabled">#1A2F24</Color>

    <!-- 分隔符令牌 -->
    <Color x:Key="Semantic.Divider.Default">#2E4538</Color>
    <Color x:Key="Semantic.Divider.Thick">#385042</Color>

    <!-- 状态色令牌 -->
    <Color x:Key="Semantic.State.Hover">#243A2E</Color>
    <Color x:Key="Semantic.State.Pressed">#2E4538</Color>
    <Color x:Key="Semantic.State.Selected">#52B788</Color>
    <Color x:Key="Semantic.State.Disabled">#1A2F24</Color>
    <Color x:Key="Semantic.State.Indeterminate">#4A6050</Color>

    <!-- 成功色令牌 -->
    <Color x:Key="Semantic.Success.Default">#70E0A0</Color>
    <Color x:Key="Semantic.Success.Hover">#80F0B0</Color>
    <Color x:Key="Semantic.Success.Pressed">#60D090</Color>
    <Color x:Key="Semantic.Success.Disabled">#1A3A28</Color>

    <!-- 警告色令牌 -->
    <Color x:Key="Semantic.Warning.Default">#F0D870</Color>
    <Color x:Key="Semantic.Warning.Hover">#FFE880</Color>
    <Color x:Key="Semantic.Warning.Pressed">#E0C860</Color>
    <Color x:Key="Semantic.Warning.Disabled">#3A3528</Color>

    <!-- 错误色令牌 -->
    <Color x:Key="Semantic.Error.Default">#E89090</Color>
    <Color x:Key="Semantic.Error.Hover">#F8A0A0</Color>
    <Color x:Key="Semantic.Error.Pressed">#D88080</Color>
    <Color x:Key="Semantic.Error.Disabled">#3A2828</Color>

    <!-- 信息色令牌 -->
    <Color x:Key="Semantic.Info.Default">#90C0E0</Color>
    <Color x:Key="Semantic.Info.Hover">#A0D0F0</Color>
    <Color x:Key="Semantic.Info.Pressed">#80B0D0</Color>
    <Color x:Key="Semantic.Info.Disabled">#1A2A35</Color>

    <!-- 阴影令牌 -->
    <Color x:Key="Semantic.Shadow.Base">#000000</Color>

</ResourceDictionary>
