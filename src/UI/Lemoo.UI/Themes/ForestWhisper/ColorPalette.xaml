<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================
         森林低语主题配色方案
         Forest Whisper Theme - 清新的自然绿色
         灵感来自清晨森林的清新与宁静
         ============================================ -->

    <!-- 主背景色系 -->
    <Color x:Key="Palette.Background.Primary">#0D1F12</Color>
    <Color x:Key="Palette.Background.Secondary">#091810</Color>
    <Color x:Key="Palette.Background.Tertiary">#102818</Color>

    <!-- 表面色系（卡片、面板） -->
    <Color x:Key="Palette.Surface.Primary">#1A2F24</Color>
    <Color x:Key="Palette.Surface.Secondary">#243A2E</Color>
    <Color x:Key="Palette.Surface.Elevated">#2E4538</Color>

    <!-- 强调色系 -->
    <Color x:Key="Palette.Accent.Primary">#52B788</Color>
    <Color x:Key="Palette.Accent.Secondary">#40916C</Color>
    <Color x:Key="Palette.Accent.Hover">#62C798</Color>
    <Color x:Key="Palette.Accent.Pressed">#42A778</Color>

    <!-- 文本色系 -->
    <Color x:Key="Palette.Text.Primary">#E0F0E8</Color>
    <Color x:Key="Palette.Text.Secondary">#D0E8E0</Color>
    <Color x:Key="Palette.Text.Tertiary">#7A9080</Color>
    <Color x:Key="Palette.Text.Disabled">#3A5040</Color>
    <Color x:Key="Palette.Text.Inverse">#FFFFFF</Color>

    <!-- 边框色系 -->
    <Color x:Key="Palette.Border.Primary">#52B788</Color>
    <Color x:Key="Palette.Border.Secondary">#2E4538</Color>
    <Color x:Key="Palette.Border.Focus">#52B788</Color>

    <!-- 分隔符 -->
    <Color x:Key="Palette.Divider.Primary">#2E4538</Color>
    <Color x:Key="Palette.Divider.Secondary">#1A2F24</Color>

    <!-- 状态色系 -->
    <Color x:Key="Palette.State.Hover">#243A2E</Color>
    <Color x:Key="Palette.State.Pressed">#52B788</Color>
    <Color x:Key="Palette.State.Selected">#52B788</Color>
    <Color x:Key="Palette.State.Disabled">#1A2F24</Color>

    <!-- 阴影色 -->
    <Color x:Key="Palette.Shadow.Primary">#000000</Color>

    <!-- 透明色（用于动画） -->
    <Color x:Key="Palette.Transparent">#00000000</Color>

</ResourceDictionary>
