<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ============================================
         基础主题配色方案
         这是您当前使用的颜色搭配，作为默认主题
         ============================================ -->
    
    <!-- 主背景色系 -->
    <Color x:Key="Palette.Background.Primary">#222831</Color>
    <Color x:Key="Palette.Background.Secondary">#161A1E</Color>
    <Color x:Key="Palette.Background.Tertiary">#20252B</Color>
    
    <!-- 表面色系（卡片、面板） -->
    <Color x:Key="Palette.Surface.Primary">#2A2F36</Color>
    <Color x:Key="Palette.Surface.Secondary">#333B46</Color>
    <Color x:Key="Palette.Surface.Elevated">#3A3F46</Color>
    
    <!-- 强调色系 -->
    <Color x:Key="Palette.Accent.Primary">#00ADB5</Color>
    <Color x:Key="Palette.Accent.Secondary">#0078D4</Color>
    <Color x:Key="Palette.Accent.Hover">#00C4CF</Color>
    <Color x:Key="Palette.Accent.Pressed">#0099A3</Color>
    
    <!-- 文本色系 -->
    <Color x:Key="Palette.Text.Primary">#EEEEEE</Color>
    <Color x:Key="Palette.Text.Secondary">#DDDDDD</Color>
    <Color x:Key="Palette.Text.Tertiary">#888888</Color>
    <Color x:Key="Palette.Text.Disabled">#666666</Color>
    <Color x:Key="Palette.Text.Inverse">#FFFFFF</Color>
    
    <!-- 边框色系 -->
    <Color x:Key="Palette.Border.Primary">#3A3F46</Color>
    <Color x:Key="Palette.Border.Secondary">#2A2F36</Color>
    <Color x:Key="Palette.Border.Focus">#00ADB5</Color>
    
    <!-- 分隔符 -->
    <Color x:Key="Palette.Divider.Primary">#3A3F46</Color>
    <Color x:Key="Palette.Divider.Secondary">#2A2F36</Color>
    
    <!-- 状态色系 -->
    <Color x:Key="Palette.State.Hover">#333B46</Color>
    <Color x:Key="Palette.State.Pressed">#2A2F36</Color>
    <Color x:Key="Palette.State.Selected">#00ADB5</Color>
    <Color x:Key="Palette.State.Disabled">#555555</Color>
    
    <!-- 阴影色 -->
    <Color x:Key="Palette.Shadow.Primary">#000000</Color>
    
    <!-- 透明色（用于动画） -->
    <Color x:Key="Palette.Transparent">#00000000</Color>
    
</ResourceDictionary>

