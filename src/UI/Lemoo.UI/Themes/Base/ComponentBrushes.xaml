<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Lemoo.UI;component/Themes/Base/SemanticTokens.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Lemoo.UI;component/Themes/Base/ColorPalette.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- ============================================
         组件画刷层
         将语义令牌转换为 SolidColorBrush，供 XAML 直接使用
         ============================================ -->
    
    <!-- 工作台画刷 -->
    <SolidColorBrush x:Key="WorkbenchBackgroundBrush" Color="{StaticResource workbench.background}"/>
    <SolidColorBrush x:Key="WorkbenchSurfaceBrush" Color="{StaticResource workbench.surface}"/>
    <SolidColorBrush x:Key="WorkbenchCardBrush" Color="{StaticResource workbench.card}"/>
    
    <!-- 标题栏画刷 -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="{StaticResource titleBar.background}"/>
    <SolidColorBrush x:Key="TitleBarForegroundBrush" Color="{StaticResource titleBar.foreground}"/>
    <SolidColorBrush x:Key="TitleBarActiveBackgroundBrush" Color="{StaticResource titleBar.activeBackground}"/>
    <SolidColorBrush x:Key="TitleBarBorderBrush" Color="{StaticResource titleBar.border}"/>
    
    <!-- 侧边栏画刷 -->
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource sidebar.background}"/>
    <SolidColorBrush x:Key="SidebarForegroundBrush" Color="{StaticResource sidebar.foreground}"/>
    <SolidColorBrush x:Key="SidebarHoverBackgroundBrush" Color="{StaticResource sidebar.hoverBackground}"/>
    <SolidColorBrush x:Key="SidebarSelectedBackgroundBrush" Color="{StaticResource sidebar.selectedBackground}"/>
    <SolidColorBrush x:Key="SidebarSelectedForegroundBrush" Color="{StaticResource sidebar.selectedForeground}"/>
    <SolidColorBrush x:Key="SidebarBorderBrush" Color="{StaticResource sidebar.border}"/>
    
    <!-- 菜单画刷 -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="{StaticResource menu.background}"/>
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="{StaticResource menu.foreground}"/>
    <SolidColorBrush x:Key="MenuBorderBrush" Color="{StaticResource menu.border}"/>
    <SolidColorBrush x:Key="MenuHoverBackgroundBrush" Color="{StaticResource menu.hoverBackground}"/>
    <SolidColorBrush x:Key="MenuSelectedBackgroundBrush" Color="{StaticResource menu.selectedBackground}"/>
    <SolidColorBrush x:Key="MenuSelectedForegroundBrush" Color="{StaticResource menu.selectedForeground}"/>
    <SolidColorBrush x:Key="MenuSeparatorBrush" Color="{StaticResource menu.separator}"/>
    
    <!-- 菜单项画刷 -->
    <SolidColorBrush x:Key="MenuItemBackgroundBrush" Color="{StaticResource menuItem.background}"/>
    <SolidColorBrush x:Key="MenuItemForegroundBrush" Color="{StaticResource menuItem.foreground}"/>
    <SolidColorBrush x:Key="MenuItemHoverBackgroundBrush" Color="{StaticResource menuItem.hoverBackground}"/>
    <SolidColorBrush x:Key="MenuItemSelectedBackgroundBrush" Color="{StaticResource menuItem.selectedBackground}"/>
    <SolidColorBrush x:Key="MenuItemSelectedForegroundBrush" Color="{StaticResource menuItem.selectedForeground}"/>
    <SolidColorBrush x:Key="MenuItemHighlightedBackgroundBrush" Color="{StaticResource menuItem.highlightedBackground}"/>
    
    <!-- 按钮画刷 -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource button.background}"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{StaticResource button.foreground}"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="{StaticResource button.hoverBackground}"/>
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="{StaticResource button.pressedBackground}"/>
    <SolidColorBrush x:Key="ButtonDisabledBackgroundBrush" Color="{StaticResource button.disabledBackground}"/>
    <SolidColorBrush x:Key="ButtonDisabledForegroundBrush" Color="{StaticResource button.disabledForeground}"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{StaticResource button.border}"/>
    
    <!-- 标签页画刷 -->
    <SolidColorBrush x:Key="TabBackgroundBrush" Color="{StaticResource tab.background}"/>
    <SolidColorBrush x:Key="TabActiveBackgroundBrush" Color="{StaticResource tab.activeBackground}"/>
    <SolidColorBrush x:Key="TabForegroundBrush" Color="{StaticResource tab.foreground}"/>
    <SolidColorBrush x:Key="TabActiveForegroundBrush" Color="{StaticResource tab.activeForeground}"/>
    <SolidColorBrush x:Key="TabHoverBackgroundBrush" Color="{StaticResource tab.hoverBackground}"/>
    <SolidColorBrush x:Key="TabSelectedBackgroundBrush" Color="{StaticResource tab.selectedBackground}"/>
    <SolidColorBrush x:Key="TabSelectedForegroundBrush" Color="{StaticResource tab.selectedForeground}"/>
    <SolidColorBrush x:Key="TabBorderBrush" Color="{StaticResource tab.border}"/>
    
    <!-- 输入框画刷 -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource input.background}"/>
    <SolidColorBrush x:Key="InputForegroundBrush" Color="{StaticResource input.foreground}"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="{StaticResource input.border}"/>
    <SolidColorBrush x:Key="InputFocusBorderBrush" Color="{StaticResource input.focusBorder}"/>
    <SolidColorBrush x:Key="InputPlaceholderBrush" Color="{StaticResource input.placeholder}"/>
    
    <!-- 分隔符画刷 -->
    <SolidColorBrush x:Key="SeparatorBrush" Color="{StaticResource separator.background}"/>
    
    <!-- 滚动条画刷 -->
    <SolidColorBrush x:Key="ScrollbarShadowBrush" Color="{StaticResource scrollbar.shadow}"/>
    <SolidColorBrush x:Key="ScrollbarSliderBackgroundBrush" Color="{StaticResource scrollbar.sliderBackground}"/>
    <SolidColorBrush x:Key="ScrollbarSliderHoverBackgroundBrush" Color="{StaticResource scrollbar.sliderHoverBackground}"/>
    
    <!-- 状态栏画刷 -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="{StaticResource statusBar.background}"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="{StaticResource statusBar.foreground}"/>
    
    <!-- 通知画刷 -->
    <SolidColorBrush x:Key="NotificationBackgroundBrush" Color="{StaticResource notification.background}"/>
    <SolidColorBrush x:Key="NotificationBorderBrush" Color="{StaticResource notification.border}"/>
    <SolidColorBrush x:Key="NotificationForegroundBrush" Color="{StaticResource notification.foreground}"/>
    
    <!-- 下拉菜单画刷 -->
    <SolidColorBrush x:Key="DropdownBackgroundBrush" Color="{StaticResource dropdown.background}"/>
    <SolidColorBrush x:Key="DropdownForegroundBrush" Color="{StaticResource dropdown.foreground}"/>
    <SolidColorBrush x:Key="DropdownBorderBrush" Color="{StaticResource dropdown.border}"/>
    <SolidColorBrush x:Key="DropdownHoverBackgroundBrush" Color="{StaticResource dropdown.hoverBackground}"/>

    <!-- 卡片画刷 -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource card.background}"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource card.border}"/>
    <SolidColorBrush x:Key="CardHoverBackgroundBrush" Color="{StaticResource card.hoverBackground}"/>

    <!-- 编辑器画刷 -->
    <SolidColorBrush x:Key="EditorBackgroundBrush" Color="{StaticResource input.background}"/>

    <!-- 列表项画刷 -->
    <SolidColorBrush x:Key="ListItemBackgroundBrush" Color="{StaticResource listItem.background}"/>
    <SolidColorBrush x:Key="ListItemHoverBackgroundBrush" Color="{StaticResource listItem.hoverBackground}"/>
    <SolidColorBrush x:Key="ListItemSelectedBackgroundBrush" Color="{StaticResource listItem.selectedBackground}"/>

    <!-- 弹出层画刷 -->
    <SolidColorBrush x:Key="PopupBackgroundBrush" Color="{StaticResource popup.background}"/>
    <SolidColorBrush x:Key="PopupBorderBrush" Color="{StaticResource popup.border}"/>

    <!-- 开关画刷 -->
    <SolidColorBrush x:Key="ToggleSwitchOffBackgroundBrush" Color="{StaticResource toggleSwitch.offBackground}"/>
    <SolidColorBrush x:Key="ToggleSwitchOffBorderBrush" Color="{StaticResource toggleSwitch.offBorder}"/>
    <SolidColorBrush x:Key="ToggleSwitchOnBackgroundBrush" Color="{StaticResource toggleSwitch.onBackground}"/>
    <SolidColorBrush x:Key="ToggleSwitchOnBorderBrush" Color="{StaticResource toggleSwitch.onBorder}"/>
    <SolidColorBrush x:Key="ToggleSwitchKnobBrush" Color="{StaticResource toggleSwitch.knob}"/>
    <SolidColorBrush x:Key="ToggleSwitchKnobOnBrush" Color="{StaticResource toggleSwitch.knobOn}"/>
    <SolidColorBrush x:Key="ToggleSwitchHoverBorderBrush" Color="{StaticResource toggleSwitch.hoverBorder}"/>
    <SolidColorBrush x:Key="ToggleSwitchPressedBorderBrush" Color="{StaticResource toggleSwitch.pressedBorder}"/>

    <!-- NumericUpDown 画刷 -->
    <SolidColorBrush x:Key="NumericUpDownButtonBackgroundBrush" Color="{StaticResource numericUpDown.buttonBackground}"/>
    <SolidColorBrush x:Key="NumericUpDownButtonHoverBackgroundBrush" Color="{StaticResource numericUpDown.buttonHoverBackground}"/>
    <SolidColorBrush x:Key="NumericUpDownButtonPressedBackgroundBrush" Color="{StaticResource numericUpDown.buttonPressedBackground}"/>

    <!-- 文本画刷 -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource text.primary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource text.secondary}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource text.disabled}"/>
    <SolidColorBrush x:Key="TextOnDarkBrush" Color="{StaticResource text.onDark}"/>

    <!-- 边框画刷 -->
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="{StaticResource border.default}"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="{StaticResource border.focus}"/>

    <!-- 阴影画刷 -->
    <SolidColorBrush x:Key="ShadowColorBrush" Color="{StaticResource shadow.color}"/>

    <!-- 强调色画刷（用于 Win11 控件样式） -->
    <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{StaticResource Palette.Accent.Primary}"/>
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource Palette.Accent.Secondary}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource Palette.Accent.Hover}"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="{StaticResource Palette.Accent.Pressed}"/>

    <!-- 语义颜色画刷 -->
    <SolidColorBrush x:Key="Brush.Semantic.Success.Background" Color="{StaticResource semantic.success.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Success.Foreground" Color="{StaticResource semantic.success.foreground}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Success.Border" Color="{StaticResource semantic.success.border}"/>

    <SolidColorBrush x:Key="Brush.Semantic.Warning.Background" Color="{StaticResource semantic.warning.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Warning.Foreground" Color="{StaticResource semantic.warning.foreground}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Warning.Border" Color="{StaticResource semantic.warning.border}"/>

    <SolidColorBrush x:Key="Brush.Semantic.Error.Background" Color="{StaticResource semantic.error.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Error.Foreground" Color="{StaticResource semantic.error.foreground}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Error.Border" Color="{StaticResource semantic.error.border}"/>

    <SolidColorBrush x:Key="Brush.Semantic.Info.Background" Color="{StaticResource semantic.info.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Info.Foreground" Color="{StaticResource semantic.info.foreground}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Info.Border" Color="{StaticResource semantic.info.border}"/>

    <!-- 语义颜色画刷（简化名称，用于 Badge 等控件） -->
    <SolidColorBrush x:Key="Brush.Semantic.Error" Color="{StaticResource semantic.error.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Success" Color="{StaticResource semantic.success.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Warning" Color="{StaticResource semantic.warning.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Info" Color="{StaticResource semantic.info.background}"/>
    <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Palette.Accent.Primary}"/>

    <!-- 按钮画刷（兼容性） -->
    <SolidColorBrush x:Key="Brush.Button.Background" Color="{StaticResource button.background}"/>
    <SolidColorBrush x:Key="Brush.Button.Foreground" Color="{StaticResource button.foreground}"/>
    <SolidColorBrush x:Key="Brush.Button.Border" Color="{StaticResource button.border}"/>
    <SolidColorBrush x:Key="Brush.Button.HoverBackground" Color="{StaticResource button.hoverBackground}"/>
    <SolidColorBrush x:Key="Brush.Button.HoverBorder" Color="{StaticResource input.focusBorder}"/>
    <SolidColorBrush x:Key="Brush.Button.PressedBackground" Color="{StaticResource button.pressedBackground}"/>
    <SolidColorBrush x:Key="Brush.Button.PressedBorder" Color="{StaticResource input.focusBorder}"/>
    <SolidColorBrush x:Key="Brush.Button.FocusBorder" Color="{StaticResource border.focus}"/>

    <!-- 文本框画刷（兼容性） -->
    <SolidColorBrush x:Key="Brush.TextBox.Background" Color="{StaticResource input.background}"/>
    <SolidColorBrush x:Key="Brush.TextBox.Foreground" Color="{StaticResource input.foreground}"/>
    <SolidColorBrush x:Key="Brush.TextBox.Border" Color="{StaticResource input.border}"/>
    <SolidColorBrush x:Key="Brush.TextBox.HoverBorder" Color="{StaticResource input.focusBorder}"/>
    <SolidColorBrush x:Key="Brush.TextBox.FocusBorder" Color="{StaticResource input.focusBorder}"/>
    <SolidColorBrush x:Key="Brush.TextBox.Caret" Color="{StaticResource text.primary}"/>

    <!-- 简化名称画刷（兼容性） -->
    <SolidColorBrush x:Key="Brush.WorkbenchBackground" Color="{StaticResource workbench.background}"/>
    <SolidColorBrush x:Key="Brush.Card.Background" Color="{StaticResource card.background}"/>
    <SolidColorBrush x:Key="Brush.Card.Border" Color="{StaticResource card.border}"/>
    <SolidColorBrush x:Key="Brush.ListItem.HoverBackground" Color="{StaticResource listItem.hoverBackground}"/>
    <SolidColorBrush x:Key="Brush.Popup.Background" Color="{StaticResource popup.background}"/>
    <SolidColorBrush x:Key="Brush.Popup.Border" Color="{StaticResource popup.border}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.OffBackground" Color="{StaticResource toggleSwitch.offBackground}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.OffBorder" Color="{StaticResource toggleSwitch.offBorder}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.OnBackground" Color="{StaticResource toggleSwitch.onBackground}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.OnBorder" Color="{StaticResource toggleSwitch.onBorder}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.Knob" Color="{StaticResource toggleSwitch.knob}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.Knob.On" Color="{StaticResource toggleSwitch.knobOn}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.HoverBorder" Color="{StaticResource toggleSwitch.hoverBorder}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.PressedBorder" Color="{StaticResource toggleSwitch.pressedBorder}"/>
    <SolidColorBrush x:Key="Brush.NumericUpDown.ButtonBackground" Color="{StaticResource numericUpDown.buttonBackground}"/>
    <SolidColorBrush x:Key="Brush.NumericUpDown.ButtonHoverBackground" Color="{StaticResource numericUpDown.buttonHoverBackground}"/>
    <SolidColorBrush x:Key="Brush.NumericUpDown.ButtonPressedBackground" Color="{StaticResource numericUpDown.buttonPressedBackground}"/>
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="{StaticResource text.primary}"/>
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="{StaticResource text.secondary}"/>
    <SolidColorBrush x:Key="Brush.Text.Disabled" Color="{StaticResource text.disabled}"/>
    <SolidColorBrush x:Key="Brush.Text.OnDark" Color="{StaticResource text.onDark}"/>
    <SolidColorBrush x:Key="Brush.Border.Default" Color="{StaticResource border.default}"/>
    <SolidColorBrush x:Key="Brush.Border.Focus" Color="{StaticResource border.focus}"/>
    <SolidColorBrush x:Key="Brush.Separator" Color="{StaticResource separator}"/>
    <SolidColorBrush x:Key="Brush.Shadow" Color="{StaticResource shadow.color}"/>

    <!-- 额外画刷（用于新增控件） -->
    <SolidColorBrush x:Key="StatusBarBorderBrush" Color="{StaticResource sidebar.border}"/>
    <SolidColorBrush x:Key="AccentPrimaryForegroundBrush" Color="{StaticResource text.onDark}"/>
    <SolidColorBrush x:Key="SemanticErrorBrush" Color="{StaticResource semantic.error.background}"/>
    <SolidColorBrush x:Key="SemanticSuccessBrush" Color="{StaticResource semantic.success.background}"/>
    <SolidColorBrush x:Key="SemanticWarningBrush" Color="{StaticResource semantic.warning.background}"/>
    <SolidColorBrush x:Key="SemanticInfoBrush" Color="{StaticResource semantic.info.background}"/>

</ResourceDictionary>

