<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Lemoo.UI;component/Themes/Base/SemanticTokens.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Lemoo.UI;component/Themes/Base/ColorPalette.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- ============================================
         Component Brushes
         Improved: Use DynamicResource to ensure theme switching works properly
         Note: SolidColorBrush must use Color={DynamicResource} instead of StaticResource
         ============================================ -->

    <!-- Workbench Brushes -->
    <SolidColorBrush x:Key="WorkbenchBackgroundBrush" Color="{DynamicResource workbench.background}"/>
    <SolidColorBrush x:Key="WorkbenchSurfaceBrush" Color="{DynamicResource workbench.surface}"/>
    <SolidColorBrush x:Key="WorkbenchCardBrush" Color="{DynamicResource workbench.card}"/>
    <SolidColorBrush x:Key="LayerBackgroundBrush" Color="{DynamicResource sidebar.background}"/>

    <!-- Title Bar Brushes -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="{DynamicResource titleBar.background}"/>
    <SolidColorBrush x:Key="TitleBarForegroundBrush" Color="{DynamicResource titleBar.foreground}"/>
    <SolidColorBrush x:Key="TitleBarActiveBackgroundBrush" Color="{DynamicResource titleBar.activeBackground}"/>
    <SolidColorBrush x:Key="TitleBarBorderBrush" Color="{DynamicResource titleBar.border}"/>

    <!-- Sidebar Brushes -->
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{DynamicResource sidebar.background}"/>
    <SolidColorBrush x:Key="SidebarForegroundBrush" Color="{DynamicResource sidebar.foreground}"/>
    <SolidColorBrush x:Key="SidebarHoverBackgroundBrush" Color="{DynamicResource sidebar.hoverBackground}"/>
    <SolidColorBrush x:Key="SidebarSelectedBackgroundBrush" Color="{DynamicResource sidebar.selectedBackground}"/>
    <SolidColorBrush x:Key="SidebarSelectedForegroundBrush" Color="{DynamicResource sidebar.selectedForeground}"/>
    <SolidColorBrush x:Key="SidebarBorderBrush" Color="{DynamicResource sidebar.border}"/>

    <!-- Menu Brushes -->
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="{DynamicResource menu.background}"/>
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="{DynamicResource menu.foreground}"/>
    <SolidColorBrush x:Key="MenuBorderBrush" Color="{DynamicResource menu.border}"/>
    <SolidColorBrush x:Key="MenuHoverBackgroundBrush" Color="{DynamicResource menu.hoverBackground}"/>
    <SolidColorBrush x:Key="MenuSelectedBackgroundBrush" Color="{DynamicResource menu.selectedBackground}"/>
    <SolidColorBrush x:Key="MenuSelectedForegroundBrush" Color="{DynamicResource menu.selectedForeground}"/>
    <SolidColorBrush x:Key="MenuSeparatorBrush" Color="{DynamicResource menu.separator}"/>

    <!-- Menu Item Brushes -->
    <SolidColorBrush x:Key="MenuItemBackgroundBrush" Color="{DynamicResource menuItem.background}"/>
    <SolidColorBrush x:Key="MenuItemForegroundBrush" Color="{DynamicResource menuItem.foreground}"/>
    <SolidColorBrush x:Key="MenuItemHoverBackgroundBrush" Color="{DynamicResource menuItem.hoverBackground}"/>
    <SolidColorBrush x:Key="MenuItemSelectedBackgroundBrush" Color="{DynamicResource menuItem.selectedBackground}"/>
    <SolidColorBrush x:Key="MenuItemSelectedForegroundBrush" Color="{DynamicResource menuItem.selectedForeground}"/>
    <SolidColorBrush x:Key="MenuItemHighlightedBackgroundBrush" Color="{DynamicResource menuItem.highlightedBackground}"/>

    <!-- Button Brushes -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{DynamicResource button.background}"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{DynamicResource button.foreground}"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="{DynamicResource button.hoverBackground}"/>
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="{DynamicResource button.pressedBackground}"/>
    <SolidColorBrush x:Key="ButtonDisabledBackgroundBrush" Color="{DynamicResource button.disabledBackground}"/>
    <SolidColorBrush x:Key="ButtonDisabledForegroundBrush" Color="{DynamicResource button.disabledForeground}"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{DynamicResource button.border}"/>

    <!-- Tab Brushes -->
    <SolidColorBrush x:Key="TabBackgroundBrush" Color="{DynamicResource tab.background}"/>
    <SolidColorBrush x:Key="TabActiveBackgroundBrush" Color="{DynamicResource tab.activeBackground}"/>
    <SolidColorBrush x:Key="TabForegroundBrush" Color="{DynamicResource tab.foreground}"/>
    <SolidColorBrush x:Key="TabActiveForegroundBrush" Color="{DynamicResource tab.activeForeground}"/>
    <SolidColorBrush x:Key="TabHoverBackgroundBrush" Color="{DynamicResource tab.hoverBackground}"/>
    <SolidColorBrush x:Key="TabSelectedBackgroundBrush" Color="{DynamicResource tab.selectedBackground}"/>
    <SolidColorBrush x:Key="TabSelectedForegroundBrush" Color="{DynamicResource tab.selectedForeground}"/>
    <SolidColorBrush x:Key="TabBorderBrush" Color="{DynamicResource tab.border}"/>

    <!-- Input Box Brushes -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{DynamicResource input.background}"/>
    <SolidColorBrush x:Key="InputForegroundBrush" Color="{DynamicResource input.foreground}"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="{DynamicResource input.border}"/>
    <SolidColorBrush x:Key="InputFocusBorderBrush" Color="{DynamicResource input.focusBorder}"/>
    <SolidColorBrush x:Key="InputPlaceholderBrush" Color="{DynamicResource input.placeholder}"/>

    <!-- Separator Brushes -->
    <SolidColorBrush x:Key="SeparatorBrush" Color="{DynamicResource separator.background}"/>

    <!-- Scrollbar Brushes -->
    <SolidColorBrush x:Key="ScrollbarShadowBrush" Color="{DynamicResource scrollbar.shadow}"/>
    <SolidColorBrush x:Key="ScrollbarSliderBackgroundBrush" Color="{DynamicResource scrollbar.sliderBackground}"/>
    <SolidColorBrush x:Key="ScrollbarSliderHoverBackgroundBrush" Color="{DynamicResource scrollbar.sliderHoverBackground}"/>

    <!-- Status Bar Brushes -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="{DynamicResource statusBar.background}"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="{DynamicResource statusBar.foreground}"/>

    <!-- Notification Brushes -->
    <SolidColorBrush x:Key="NotificationBackgroundBrush" Color="{DynamicResource notification.background}"/>
    <SolidColorBrush x:Key="NotificationBorderBrush" Color="{DynamicResource notification.border}"/>
    <SolidColorBrush x:Key="NotificationForegroundBrush" Color="{DynamicResource notification.foreground}"/>

    <!-- Dropdown Brushes -->
    <SolidColorBrush x:Key="DropdownBackgroundBrush" Color="{DynamicResource dropdown.background}"/>
    <SolidColorBrush x:Key="DropdownForegroundBrush" Color="{DynamicResource dropdown.foreground}"/>
    <SolidColorBrush x:Key="DropdownBorderBrush" Color="{DynamicResource dropdown.border}"/>
    <SolidColorBrush x:Key="DropdownHoverBackgroundBrush" Color="{DynamicResource dropdown.hoverBackground}"/>

    <!-- Card Brushes -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{DynamicResource card.background}"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="{DynamicResource card.border}"/>
    <SolidColorBrush x:Key="CardHoverBackgroundBrush" Color="{DynamicResource card.hoverBackground}"/>

    <!-- Badge Brushes -->
    <SolidColorBrush x:Key="BadgeBackgroundBrush" Color="{DynamicResource sidebar.selectedBackground}"/>
    <SolidColorBrush x:Key="BadgeForegroundBrush" Color="{DynamicResource text.onDark}"/>

    <!-- Editor Brushes -->
    <SolidColorBrush x:Key="EditorBackgroundBrush" Color="{DynamicResource input.background}"/>

    <!-- List Item Brushes -->
    <SolidColorBrush x:Key="ListItemBackgroundBrush" Color="{DynamicResource listItem.background}"/>
    <SolidColorBrush x:Key="ListItemHoverBackgroundBrush" Color="{DynamicResource listItem.hoverBackground}"/>
    <SolidColorBrush x:Key="ListItemSelectedBackgroundBrush" Color="{DynamicResource listItem.selectedBackground}"/>

    <!-- Popup Brushes -->
    <SolidColorBrush x:Key="PopupBackgroundBrush" Color="{DynamicResource popup.background}"/>
    <SolidColorBrush x:Key="PopupBorderBrush" Color="{DynamicResource popup.border}"/>

    <!-- Toggle Switch Brushes -->
    <SolidColorBrush x:Key="ToggleSwitchOffBackgroundBrush" Color="{DynamicResource toggleSwitch.offBackground}"/>
    <SolidColorBrush x:Key="ToggleSwitchOffBorderBrush" Color="{DynamicResource toggleSwitch.offBorder}"/>
    <SolidColorBrush x:Key="ToggleSwitchOnBackgroundBrush" Color="{DynamicResource toggleSwitch.onBackground}"/>
    <SolidColorBrush x:Key="ToggleSwitchOnBorderBrush" Color="{DynamicResource toggleSwitch.onBorder}"/>
    <SolidColorBrush x:Key="ToggleSwitchKnobBrush" Color="{DynamicResource toggleSwitch.knob}"/>
    <SolidColorBrush x:Key="ToggleSwitchKnobOnBrush" Color="{DynamicResource toggleSwitch.knobOn}"/>
    <SolidColorBrush x:Key="ToggleSwitchHoverBorderBrush" Color="{DynamicResource toggleSwitch.hoverBorder}"/>
    <SolidColorBrush x:Key="ToggleSwitchPressedBorderBrush" Color="{DynamicResource toggleSwitch.pressedBorder}"/>

    <!-- NumericUpDown Brushes -->
    <SolidColorBrush x:Key="NumericUpDownButtonBackgroundBrush" Color="{DynamicResource numericUpDown.buttonBackground}"/>
    <SolidColorBrush x:Key="NumericUpDownButtonHoverBackgroundBrush" Color="{DynamicResource numericUpDown.buttonHoverBackground}"/>
    <SolidColorBrush x:Key="NumericUpDownButtonPressedBackgroundBrush" Color="{DynamicResource numericUpDown.buttonPressedBackground}"/>

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{DynamicResource text.primary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource text.secondary}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{DynamicResource text.disabled}"/>
    <SolidColorBrush x:Key="TextOnDarkBrush" Color="{DynamicResource text.onDark}"/>

    <!-- Border Brushes -->
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="{DynamicResource border.default}"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="{DynamicResource border.focus}"/>

    <!-- Shadow Brushes -->
    <SolidColorBrush x:Key="ShadowColorBrush" Color="{DynamicResource shadow.color}"/>

    <!-- Accent Color Brushes (for Win11 control styles) -->
    <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{DynamicResource Palette.Accent.Primary}"/>
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{DynamicResource Palette.Accent.Secondary}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{DynamicResource Palette.Accent.Hover}"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="{DynamicResource Palette.Accent.Pressed}"/>

    <!-- Semantic Color Brushes -->
    <SolidColorBrush x:Key="Brush.Semantic.Success.Background" Color="{DynamicResource semantic.success.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Success.Foreground" Color="{DynamicResource semantic.success.foreground}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Success.Border" Color="{DynamicResource semantic.success.border}"/>

    <SolidColorBrush x:Key="Brush.Semantic.Warning.Background" Color="{DynamicResource semantic.warning.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Warning.Foreground" Color="{DynamicResource semantic.warning.foreground}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Warning.Border" Color="{DynamicResource semantic.warning.border}"/>

    <SolidColorBrush x:Key="Brush.Semantic.Error.Background" Color="{DynamicResource semantic.error.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Error.Foreground" Color="{DynamicResource semantic.error.foreground}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Error.Border" Color="{DynamicResource semantic.error.border}"/>

    <SolidColorBrush x:Key="Brush.Semantic.Info.Background" Color="{DynamicResource semantic.info.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Info.Foreground" Color="{DynamicResource semantic.info.foreground}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Info.Border" Color="{DynamicResource semantic.info.border}"/>

    <!-- Semantic Color Brushes (simplified names for Badge and other controls) -->
    <SolidColorBrush x:Key="Brush.Semantic.Error" Color="{DynamicResource semantic.error.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Success" Color="{DynamicResource semantic.success.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Warning" Color="{DynamicResource semantic.warning.background}"/>
    <SolidColorBrush x:Key="Brush.Semantic.Info" Color="{DynamicResource semantic.info.background}"/>
    <SolidColorBrush x:Key="Brush.Primary" Color="{DynamicResource Palette.Accent.Primary}"/>

    <!-- Button Brushes (compatibility) -->
    <SolidColorBrush x:Key="Brush.Button.Background" Color="{DynamicResource button.background}"/>
    <SolidColorBrush x:Key="Brush.Button.Foreground" Color="{DynamicResource button.foreground}"/>
    <SolidColorBrush x:Key="Brush.Button.Border" Color="{DynamicResource button.border}"/>
    <SolidColorBrush x:Key="Brush.Button.HoverBackground" Color="{DynamicResource button.hoverBackground}"/>
    <SolidColorBrush x:Key="Brush.Button.HoverBorder" Color="{DynamicResource input.focusBorder}"/>
    <SolidColorBrush x:Key="Brush.Button.PressedBackground" Color="{DynamicResource button.pressedBackground}"/>
    <SolidColorBrush x:Key="Brush.Button.PressedBorder" Color="{DynamicResource input.focusBorder}"/>
    <SolidColorBrush x:Key="Brush.Button.FocusBorder" Color="{DynamicResource border.focus}"/>

    <!-- TextBox Brushes (compatibility) -->
    <SolidColorBrush x:Key="Brush.TextBox.Background" Color="{DynamicResource input.background}"/>
    <SolidColorBrush x:Key="Brush.TextBox.Foreground" Color="{DynamicResource input.foreground}"/>
    <SolidColorBrush x:Key="Brush.TextBox.Border" Color="{DynamicResource input.border}"/>
    <SolidColorBrush x:Key="Brush.TextBox.HoverBorder" Color="{DynamicResource input.focusBorder}"/>
    <SolidColorBrush x:Key="Brush.TextBox.FocusBorder" Color="{DynamicResource input.focusBorder}"/>
    <SolidColorBrush x:Key="Brush.TextBox.Caret" Color="{DynamicResource text.primary}"/>

    <!-- Simplified Name Brushes (compatibility) -->
    <SolidColorBrush x:Key="Brush.WorkbenchBackground" Color="{DynamicResource workbench.background}"/>
    <SolidColorBrush x:Key="Brush.Card.Background" Color="{DynamicResource card.background}"/>
    <SolidColorBrush x:Key="Brush.Card.Border" Color="{DynamicResource card.border}"/>
    <SolidColorBrush x:Key="Brush.ListItem.HoverBackground" Color="{DynamicResource listItem.hoverBackground}"/>
    <SolidColorBrush x:Key="Brush.Popup.Background" Color="{DynamicResource popup.background}"/>
    <SolidColorBrush x:Key="Brush.Popup.Border" Color="{DynamicResource popup.border}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.OffBackground" Color="{DynamicResource toggleSwitch.offBackground}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.OffBorder" Color="{DynamicResource toggleSwitch.offBorder}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.OnBackground" Color="{DynamicResource toggleSwitch.onBackground}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.OnBorder" Color="{DynamicResource toggleSwitch.onBorder}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.Knob" Color="{DynamicResource toggleSwitch.knob}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.Knob.On" Color="{DynamicResource toggleSwitch.knobOn}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.HoverBorder" Color="{DynamicResource toggleSwitch.hoverBorder}"/>
    <SolidColorBrush x:Key="Brush.ToggleSwitch.PressedBorder" Color="{DynamicResource toggleSwitch.pressedBorder}"/>
    <SolidColorBrush x:Key="Brush.NumericUpDown.ButtonBackground" Color="{DynamicResource numericUpDown.buttonBackground}"/>
    <SolidColorBrush x:Key="Brush.NumericUpDown.ButtonHoverBackground" Color="{DynamicResource numericUpDown.buttonHoverBackground}"/>
    <SolidColorBrush x:Key="Brush.NumericUpDown.ButtonPressedBackground" Color="{DynamicResource numericUpDown.buttonPressedBackground}"/>
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="{DynamicResource text.primary}"/>
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="{DynamicResource text.secondary}"/>
    <SolidColorBrush x:Key="Brush.Text.Disabled" Color="{DynamicResource text.disabled}"/>
    <SolidColorBrush x:Key="Brush.Text.OnDark" Color="{DynamicResource text.onDark}"/>
    <SolidColorBrush x:Key="Brush.Border.Default" Color="{DynamicResource border.default}"/>
    <SolidColorBrush x:Key="Brush.Border.Focus" Color="{DynamicResource border.focus}"/>
    <SolidColorBrush x:Key="Brush.Separator" Color="{DynamicResource separator}"/>
    <SolidColorBrush x:Key="Brush.Shadow" Color="{DynamicResource shadow.color}"/>

    <!-- Additional Brushes (for new controls) -->
    <SolidColorBrush x:Key="StatusBarBorderBrush" Color="{DynamicResource sidebar.border}"/>
    <SolidColorBrush x:Key="AccentPrimaryForegroundBrush" Color="{DynamicResource text.onDark}"/>
    <SolidColorBrush x:Key="SemanticErrorBrush" Color="{DynamicResource semantic.error.background}"/>
    <SolidColorBrush x:Key="SemanticSuccessBrush" Color="{DynamicResource semantic.success.background}"/>
    <SolidColorBrush x:Key="SemanticWarningBrush" Color="{DynamicResource semantic.warning.background}"/>
    <SolidColorBrush x:Key="SemanticInfoBrush" Color="{DynamicResource semantic.info.background}"/>

    <!-- On Accent Brushes -->
    <SolidColorBrush x:Key="OnAccentForegroundBrush" Color="#FFFFFFFF"/>

</ResourceDictionary>
