<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================
         深海幽蓝主题配色方案
         Deep Ocean Theme - 沉稳深邃的蓝绿色调
         灵感来自深邃海洋的神秘与宁静
         ============================================ -->

    <!-- 主背景色系 -->
    <Color x:Key="Palette.Background.Primary">#0B1219</Color>
    <Color x:Key="Palette.Background.Secondary">#081018</Color>
    <Color x:Key="Palette.Background.Tertiary">#0E1620</Color>

    <!-- 表面色系（卡片、面板） -->
    <Color x:Key="Palette.Surface.Primary">#142228</Color>
    <Color x:Key="Palette.Surface.Secondary">#1A2A35</Color>
    <Color x:Key="Palette.Surface.Elevated">#1E3442</Color>

    <!-- 强调色系 -->
    <Color x:Key="Palette.Accent.Primary">#00CED1</Color>
    <Color x:Key="Palette.Accent.Secondary">#20B2AA</Color>
    <Color x:Key="Palette.Accent.Hover">#20E0E0</Color>
    <Color x:Key="Palette.Accent.Pressed">#00B8B8</Color>

    <!-- 文本色系 -->
    <Color x:Key="Palette.Text.Primary">#E0F0F8</Color>
    <Color x:Key="Palette.Text.Secondary">#D0E8F0</Color>
    <Color x:Key="Palette.Text.Tertiary">#7A90A0</Color>
    <Color x:Key="Palette.Text.Disabled">#3A5060</Color>
    <Color x:Key="Palette.Text.Inverse">#FFFFFF</Color>

    <!-- 边框色系 -->
    <Color x:Key="Palette.Border.Primary">#1E3442</Color>
    <Color x:Key="Palette.Border.Secondary">#142228</Color>
    <Color x:Key="Palette.Border.Focus">#00CED1</Color>

    <!-- 分隔符 -->
    <Color x:Key="Palette.Divider.Primary">#1E3442</Color>
    <Color x:Key="Palette.Divider.Secondary">#142228</Color>

    <!-- 状态色系 -->
    <Color x:Key="Palette.State.Hover">#1A2A35</Color>
    <Color x:Key="Palette.State.Pressed">#00CED1</Color>
    <Color x:Key="Palette.State.Selected">#00CED1</Color>
    <Color x:Key="Palette.State.Disabled">#142228</Color>

    <!-- 阴影色 -->
    <Color x:Key="Palette.Shadow.Primary">#000000</Color>

    <!-- 透明色（用于动画） -->
    <Color x:Key="Palette.Transparent">#00000000</Color>

</ResourceDictionary>
