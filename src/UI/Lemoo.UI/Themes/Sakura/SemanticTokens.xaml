<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================
         樱花幻梦主题语义化令牌
         Sakura Theme - Semantic Tokens
         ============================================ -->

    <!-- 背景色令牌 -->
    <Color x:Key="Semantic.Background.Base">#1F1A24</Color>
    <Color x:Key="Semantic.Background.Layer1">#2D2634</Color>
    <Color x:Key="Semantic.Background.Layer2">#362E40</Color>
    <Color x:Key="Semantic.Background.Layer3">#40364C</Color>
    <Color x:Key="Semantic.Background.Layer4">#4D3E58</Color>
    <Color x:Key="Semantic.Background.Layer5">#5A4666</Color>

    <!-- 表面色令牌 -->
    <Color x:Key="Semantic.Surface.Default">#2D2634</Color>
    <Color x:Key="Semantic.Surface.Hover">#362E40</Color>
    <Color x:Key="Semantic.Surface.Pressed">#40364C</Color>
    <Color x:Key="Semantic.Surface.Selected">#FFB7C5</Color>
    <Color x:Key="Semantic.Surface.Disabled">#241E2C</Color>

    <!-- 强调色令牌 -->
    <Color x:Key="Semantic.Accent.Default">#FFB7C5</Color>
    <Color x:Key="Semantic.Accent.Hover">#FFC7D5</Color>
    <Color x:Key="Semantic.Accent.Pressed">#E8A0B0</Color>
    <Color x:Key="Semantic.Accent.Selected">#FFD1DC</Color>
    <Color x:Key="Semantic.Accent.Disabled">#4D3E58</Color>
    <Color x:Key="Semantic.Accent.Contrast">#1F1A24</Color>

    <!-- 文本色令牌 -->
    <Color x:Key="Semantic.Text.Primary">#FFF0F5</Color>
    <Color x:Key="Semantic.Text.Secondary">#FFE0E8</Color>
    <Color x:Key="Semantic.Text.Tertiary">#A890A0</Color>
    <Color x:Key="Semantic.Text.Disabled">#584858</Color>
    <Color x:Key="Semantic.Text.Inverse">#FFFFFF</Color>
    <Color x:Key="Semantic.Text.OnAccent">#1F1A24</Color>

    <!-- 边框色令牌 -->
    <Color x:Key="Semantic.Border.Default">#3D3545</Color>
    <Color x:Key="Semantic.Border.Hover">#FFB7C5</Color>
    <Color x:Key="Semantic.Border.Pressed">#FFB7C5</Color>
    <Color x:Key="Semantic.Border.Focus">#FFB7C5</Color>
    <Color x:Key="Semantic.Border.Disabled">#2D2634</Color>

    <!-- 分隔符令牌 -->
    <Color x:Key="Semantic.Divider.Default">#3D3545</Color>
    <Color x:Key="Semantic.Divider.Thick">#4D3E58</Color>

    <!-- 状态色令牌 -->
    <Color x:Key="Semantic.State.Hover">#362E40</Color>
    <Color x:Key="Semantic.State.Pressed">#40364C</Color>
    <Color x:Key="Semantic.State.Selected">#FFB7C5</Color>
    <Color x:Key="Semantic.State.Disabled">#2D2634</Color>
    <Color x:Key="Semantic.State.Indeterminate">#685878</Color>

    <!-- 成功色令牌 -->
    <Color x:Key="Semantic.Success.Default">#C8E8C8</Color>
    <Color x:Key="Semantic.Success.Hover">#D8F8D8</Color>
    <Color x:Key="Semantic.Success.Pressed">#B8D8B8</Color>
    <Color x:Key="Semantic.Success.Disabled">#2A4A2A</Color>

    <!-- 警告色令牌 -->
    <Color x:Key="Semantic.Warning.Default">#FFE4B5</Color>
    <Color x:Key="Semantic.Warning.Hover">#FFF0C5</Color>
    <Color x:Key="Semantic.Warning.Pressed">#E8D4A5</Color>
    <Color x:Key="Semantic.Warning.Disabled">#3A352A</Color>

    <!-- 错误色令牌 -->
    <Color x:Key="Semantic.Error.Default">#FFB7B7</Color>
    <Color x:Key="Semantic.Error.Hover">#FFC7C7</Color>
    <Color x:Key="Semantic.Error.Pressed">#E8A0A0</Color>
    <Color x:Key="Semantic.Error.Disabled">#3A2A2A</Color>

    <!-- 信息色令牌 -->
    <Color x:Key="Semantic.Info.Default">#B8D0F0</Color>
    <Color x:Key="Semantic.Info.Hover">#C8E0FF</Color>
    <Color x:Key="Semantic.Info.Pressed">#A8C0E0</Color>
    <Color x:Key="Semantic.Info.Disabled">#2A2A3A</Color>

    <!-- 阴影令牌 -->
    <Color x:Key="Semantic.Shadow.Base">#000000</Color>

</ResourceDictionary>
