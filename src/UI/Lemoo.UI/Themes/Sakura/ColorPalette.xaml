<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================
         樱花幻梦主题配色方案
         Sakura Theme - 唯美的日式樱花粉
         灵感来自春日樱花飘落的梦幻场景
         ============================================ -->

    <!-- 主背景色系 -->
    <Color x:Key="Palette.Background.Primary">#1F1A24</Color>
    <Color x:Key="Palette.Background.Secondary">#181420</Color>
    <Color x:Key="Palette.Background.Tertiary">#251E2C</Color>

    <!-- 表面色系（卡片、面板） -->
    <Color x:Key="Palette.Surface.Primary">#2D2634</Color>
    <Color x:Key="Palette.Surface.Secondary">#362E40</Color>
    <Color x:Key="Palette.Surface.Elevated">#40364C</Color>

    <!-- 强调色系 -->
    <Color x:Key="Palette.Accent.Primary">#FFB7C5</Color>
    <Color x:Key="Palette.Accent.Secondary">#FFD1DC</Color>
    <Color x:Key="Palette.Accent.Hover">#FFC7D5</Color>
    <Color x:Key="Palette.Accent.Pressed">#E8A0B0</Color>

    <!-- 文本色系 -->
    <Color x:Key="Palette.Text.Primary">#FFF0F5</Color>
    <Color x:Key="Palette.Text.Secondary">#FFE0E8</Color>
    <Color x:Key="Palette.Text.Tertiary">#A890A0</Color>
    <Color x:Key="Palette.Text.Disabled">#584858</Color>
    <Color x:Key="Palette.Text.Inverse">#FFFFFF</Color>

    <!-- 边框色系 -->
    <Color x:Key="Palette.Border.Primary">#FFB7C5</Color>
    <Color x:Key="Palette.Border.Secondary">#3D3545</Color>
    <Color x:Key="Palette.Border.Focus">#FFB7C5</Color>

    <!-- 分隔符 -->
    <Color x:Key="Palette.Divider.Primary">#3D3545</Color>
    <Color x:Key="Palette.Divider.Secondary">#2D2634</Color>

    <!-- 状态色系 -->
    <Color x:Key="Palette.State.Hover">#362E40</Color>
    <Color x:Key="Palette.State.Pressed">#FFB7C5</Color>
    <Color x:Key="Palette.State.Selected">#FFB7C5</Color>
    <Color x:Key="Palette.State.Disabled">#2D2634</Color>

    <!-- 阴影色 -->
    <Color x:Key="Palette.Shadow.Primary">#000000</Color>

    <!-- 透明色（用于动画） -->
    <Color x:Key="Palette.Transparent">#00000000</Color>

</ResourceDictionary>
