<UserControl x:Class="Lemoo.UI.Controls.Tabs.DocumentTabHost"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Lemoo.UI.Controls.Tabs"
             mc:Ignorable="d"
             Height="Auto"
             MinHeight="200">

    <UserControl.Resources>
        <!-- 上下文菜单样式 - 现代风格 -->
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{DynamicResource MenuBackgroundBrush}"
                                BorderBrush="{DynamicResource MenuBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="2">
                            <Border.Effect>
                                <StaticResource ResourceKey="Shadow.Menu"/>
                            </Border.Effect>
                            <ItemsPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 菜单项样式 - 现代风格 -->
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource MenuItemForegroundBrush}" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Icon" Value="{x:Null}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border"
                                BorderThickness="0"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}"
                                Margin="2,1">
                            <Border.Background>
                                <SolidColorBrush Color="Transparent" />
                            </Border.Background>
                            <ContentPresenter Content="{TemplateBinding Header}"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource MenuItemHoverBackgroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource MenuItemHighlightedBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 分隔符样式 - 现代风格 -->
        <Style TargetType="Separator">
            <Setter Property="Background" Value="{DynamicResource MenuSeparatorBrush}" />
            <Setter Property="Height" Value="1" />
            <Setter Property="Margin" Value="10,6" />
            <Setter Property="Opacity" Value="0.5" />
        </Style>

        <!-- 标签头样式：无边框、当前选中高亮 -->
        <Style x:Key="TabHeaderStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="CornerRadius" Value="4,4,0,0" />
            <Setter Property="Margin" Value="0,0,4,0" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="TextElement.Foreground" Value="{DynamicResource TabForegroundBrush}" />
            <Setter Property="Background" Value="{DynamicResource TabBackgroundBrush}" />
            <Style.Triggers>
                <!-- 选中标签高亮 -->
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource TabSelectedBackgroundBrush}" />
                    <Setter Property="TextElement.Foreground" Value="{DynamicResource TabSelectedForegroundBrush}" />
                </DataTrigger>
                <!-- 悬停（非选中） -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True" />
                        <Condition Binding="{Binding IsActive}" Value="False" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="{DynamicResource TabHoverBackgroundBrush}" />
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

        <!-- 标签内容模板：使用 Frame 承载 Page -->
        <DataTemplate DataType="{x:Type local:DocumentTab}">
            <Border CornerRadius="0,0,8,8"
                    ClipToBounds="True"
                    Background="{DynamicResource WorkbenchBackgroundBrush}">
                <Frame Content="{Binding Page}"
                       NavigationUIVisibility="Hidden"
                       BorderThickness="0"
                       Background="Transparent"
                       Margin="0" />
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标签栏 -->
        <Border Grid.Row="0" Background="{DynamicResource TabBackgroundBrush}" CornerRadius="8,8,0,0"
                ContextMenuOpening="TabBar_ContextMenuOpening">
            <Border.ContextMenu>
                <ContextMenu x:Name="TabBarContextMenu">
                    <MenuItem Click="ContextMenu_CloseAllTabs_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE74D;"
                                          FontFamily="Segoe MDL2 Assets"
                                          FontSize="14"
                                          Foreground="{DynamicResource MenuItemForegroundBrush}"
                                          Background="Transparent"
                                          VerticalAlignment="Center"
                                          Width="16"
                                          TextAlignment="Center"
                                          Margin="0,0,8,0" />
                                <TextBlock Text="关闭所有标签页"
                                          Foreground="{DynamicResource MenuItemForegroundBrush}"
                                          Background="Transparent"
                                          VerticalAlignment="Center" />
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                </ContextMenu>
            </Border.ContextMenu>
            <DockPanel LastChildFill="False">
                <!-- 标签集合 -->
                <ItemsControl x:Name="TabStrip"
                              ItemsSource="{Binding Tabs, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:DocumentTab}">
                            <Border Style="{StaticResource TabHeaderStyle}"
                                    MouseLeftButtonDown="TabHeader_MouseLeftButtonDown"
                                    MouseMove="TabHeader_MouseMove"
                                    AllowDrop="True"
                                    Drop="TabHeader_Drop"
                                    ContextMenuOpening="TabHeader_ContextMenuOpening">
                                <Border.ContextMenu>
                                    <ContextMenu x:Name="TabContextMenu">
                                        <MenuItem Click="ContextMenu_CloseTab_Click">
                                            <MenuItem.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="&#xE8BB;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource MenuItemForegroundBrush}"
                                                               Background="Transparent"
                                                               VerticalAlignment="Center"
                                                               Width="16"
                                                               TextAlignment="Center"
                                                               Margin="0,0,8,0" />
                                                    <TextBlock Text="关闭标签页"
                                                               Foreground="{DynamicResource MenuItemForegroundBrush}"
                                                               Background="Transparent"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>
                                            </MenuItem.Header>
                                        </MenuItem>
                                        <MenuItem Click="ContextMenu_CloseOtherTabs_Click">
                                            <MenuItem.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="&#xE7E7;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource MenuItemForegroundBrush}"
                                                               Background="Transparent"
                                                               VerticalAlignment="Center"
                                                               Width="16"
                                                               TextAlignment="Center"
                                                               Margin="0,0,8,0" />
                                                    <TextBlock Text="关闭其他标签页"
                                                               Foreground="{DynamicResource MenuItemForegroundBrush}"
                                                               Background="Transparent"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>
                                            </MenuItem.Header>
                                        </MenuItem>
                                        <Separator Style="{StaticResource {x:Static MenuItem.SeparatorStyleKey}}" />
                                        <MenuItem Click="ContextMenu_CloseAllTabs_Click">
                                            <MenuItem.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="&#xE74D;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource MenuItemForegroundBrush}"
                                                               Background="Transparent"
                                                               VerticalAlignment="Center"
                                                               Width="16"
                                                               TextAlignment="Center"
                                                               Margin="0,0,8,0" />
                                                    <TextBlock Text="关闭所有标签页"
                                                               Foreground="{DynamicResource MenuItemForegroundBrush}"
                                                               Background="Transparent"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>
                                            </MenuItem.Header>
                                        </MenuItem>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <DockPanel>
                                    <TextBlock Text="{Binding Title}" VerticalAlignment="Center" />
                                    <Button Content="✕"
                                            DockPanel.Dock="Right"
                                            Margin="8,0,0,0"
                                            Padding="0"
                                            Width="14"
                                            Height="14"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="{DynamicResource MenuItemForegroundBrush}"
                                            Click="CloseTab_Click" />
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <!-- 右侧最大化/恢复按钮 -->
                <Button DockPanel.Dock="Right"
                        x:Name="FullscreenButton"
                        Width="28"
                        Height="24"
                        Margin="8,4,8,4"
                        VerticalAlignment="Center"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="切换全屏"
                        Click="FullscreenButton_Click">
                    <TextBlock x:Name="FullscreenIcon"
                               FontFamily="Segoe MDL2 Assets"
                               Text="&#xE740;"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </Button>
                <!-- 窗口级别全屏 -->
                <Button DockPanel.Dock="Right"
                        x:Name="WindowFullscreenButton"
                        Width="28"
                        Height="24"
                        Margin="0,4,8,4"
                        VerticalAlignment="Center"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTip="窗口全屏 (F11)"
                        Click="WindowFullscreenButton_Click">
                    <TextBlock x:Name="WindowFullscreenIcon"
                               FontFamily="Segoe MDL2 Assets"
                               Text="&#xE922;"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                </Button>
            </DockPanel>
        </Border>

        <!-- 内容区域 -->
        <Grid Grid.Row="1">
            <ContentControl Content="{Binding SelectedTab, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </Grid>
    </Grid>
</UserControl>


