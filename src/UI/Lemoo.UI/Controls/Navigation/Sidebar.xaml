<UserControl x:Class="Lemoo.UI.Controls.Navigation.Sidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:Lemoo.UI.Converters"
             mc:Ignorable="d"
             Width="240">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <conv:ExpandIconConverter x:Key="ExpandIconConverter" />

        <!-- 导航项样式 -->
        <Style x:Key="NavItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource SidebarForegroundBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="Transparent"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Stretch" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SidebarHoverBackgroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SidebarSelectedBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 收缩状态下的导航项样式 -->
        <Style x:Key="NavItemCollapsedStyle" TargetType="Button" BasedOn="{StaticResource NavItemStyle}">
            <Setter Property="Padding" Value="12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="Transparent"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}"
                                Width="40"
                                Height="40">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SidebarHoverBackgroundBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SidebarSelectedBackgroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="{DynamicResource SidebarBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 收缩按钮（靠左） -->
            <Button x:Name="ToggleButton"
                    Grid.Row="0"
                    Width="40"
                    Height="40"
                    Margin="8,8,8,4"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="ToggleButton_Click"
                    ToolTip="收缩/展开侧边栏">
                <TextBlock Text="&#xE700;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="16"
                           Foreground="{DynamicResource SidebarForegroundBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </Button>

            <!-- 搜索框容器 -->
            <Border x:Name="SearchContainer"
                    Grid.Row="1"
                    Margin="8,4,8,8"
                    Background="{DynamicResource InputBackgroundBrush}"
                    CornerRadius="6"
                    Padding="8,0"
                    Height="40"
                    Cursor="Hand"
                    MouseLeftButtonDown="SearchContainer_MouseLeftButtonDown">
                <Grid>
                    <TextBlock x:Name="SearchIcon"
                               Text="&#xE721;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               Foreground="{DynamicResource InputPlaceholderBrush}"
                               VerticalAlignment="Center"
                               Margin="4,0,0,0" />
                    <TextBox x:Name="SearchBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{DynamicResource InputForegroundBrush}"
                             Padding="24,0,0,0"
                             VerticalContentAlignment="Center"
                             VerticalAlignment="Center"
                             FontSize="13"
                             TextChanged="SearchBox_TextChanged"
                             GotFocus="SearchBox_GotFocus"
                             LostFocus="SearchBox_LostFocus">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                              Margin="{TemplateBinding Padding}" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Grid>
            </Border>

            <!-- 收缩状态下的搜索按钮 -->
            <Button x:Name="SearchButton"
                    Grid.Row="1"
                    Style="{StaticResource NavItemCollapsedStyle}"
                    Click="SearchButton_Click"
                    ToolTip="搜索"
                    Visibility="Collapsed"
                    Margin="8,4,8,8">
                <TextBlock Text="&#xE721;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="16"
                           Foreground="{DynamicResource SidebarForegroundBrush}" />
            </Button>

            <!-- 导航树 -->
            <ScrollViewer x:Name="NavScrollViewer"
                          Grid.Row="2"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="8,0,8,8">
                <ItemsControl x:Name="NavTree"
                              ItemsSource="{Binding NavigationItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <!-- 导航项按钮 -->
                                <Button Style="{StaticResource NavItemStyle}"
                                        Click="NavItem_Click"
                                        DataContext="{Binding}"
                                        Visibility="{Binding IsEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Icon}"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource SidebarForegroundBrush}"
                                                   Margin="0,0,8,0" />
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Title}"
                                                   Foreground="{DynamicResource SidebarForegroundBrush}"
                                                   VerticalAlignment="Center"
                                                   FontSize="13" />
                                        <!-- 展开/折叠图标 -->
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding IsExpanded, Converter={StaticResource ExpandIconConverter}}"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource InputPlaceholderBrush}"
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding HasChildren, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="4,0,0,0" />
                                    </Grid>
                                </Button>
                                <!-- 子项容器 -->
                                <ItemsControl ItemsSource="{Binding Children}"
                                              Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                                              Margin="20,0,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource NavItemStyle}"
                                                    Click="NavItem_Click"
                                                    DataContext="{Binding}"
                                                    Margin="0,2,0,0"
                                                    Visibility="{Binding IsEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Icon}"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource SidebarForegroundBrush}"
                                                               Margin="0,0,8,0" />
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding Title}"
                                                               Foreground="{DynamicResource SidebarForegroundBrush}"
                                                               VerticalAlignment="Center"
                                                               FontSize="12" />
                                                </Grid>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- 底部导航项 -->
            <ItemsControl x:Name="BottomNavItems"
                          Grid.Row="3"
                          ItemsSource="{Binding BottomNavigationItems}"
                          Margin="8,0,8,8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource NavItemStyle}"
                                Click="BottomNavItem_Click"
                                DataContext="{Binding}"
                                Margin="0,0,0,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Icon}"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="16"
                                           Foreground="{DynamicResource SidebarForegroundBrush}"
                                           Margin="0,0,8,0" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Title}"
                                           Foreground="{DynamicResource SidebarForegroundBrush}"
                                           VerticalAlignment="Center"
                                           FontSize="13" />
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>

