<Window x:Class="Lemoo.UI.Controls.Dialogs.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        x:Name="MessageBoxRoot">

    <Window.Resources>
        <Style x:Key="MessageBoxButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="MinHeight" Value="32" />
            <Setter Property="Padding" Value="16,6" />
            <Setter Property="Margin" Value="4,0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource PopupBackgroundBrush}"
            BorderBrush="{DynamicResource PopupBorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="24"
            MinWidth="360"
            MaxWidth="480"
            Effect="{StaticResource Shadow.Medium}">

        <Border.InputBindings>
            <MouseBinding Command="{Binding CloseCommand, ElementName=MessageBoxRoot}"
                          MouseAction="LeftClick"
                          CommandParameter="true" />
        </Border.InputBindings>

        <StackPanel>
            <!-- 标题区域 -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- 图标 -->
                <TextBlock x:Name="IconTextBlock"
                           Grid.Column="0"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="32"
                           VerticalAlignment="Top"
                           Margin="0,0,16,0"
                           Text="&#xE897;" />

                <!-- 标题和消息 -->
                <StackPanel Grid.Column="1">
                    <TextBlock x:Name="TitleTextBlock"
                               Text="标题"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8" />

                    <TextBlock x:Name="MessageTextBlock"
                               Text="消息内容"
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextWrapping="Wrap" />
                </StackPanel>
            </Grid>

            <!-- 复选框（可选） -->
            <CheckBox x:Name="OptionCheckBox"
                      Content="不再提示"
                      Margin="0,0,0,16"
                      Visibility="Collapsed" />

            <!-- 按钮区域 -->
            <StackPanel x:Name="ButtonPanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,8,0,0" />
        </StackPanel>
    </Border>
</Window>
